{% extends 'admin_base.html.twig' %}

{% block title %}Neuer Tantiemenplan{% endblock %}
{% block page_title %}Neuer Tantiemenplan{% endblock %}

{% block body %}
<!-- Header with Navigation -->
<div class="mb-6 flex items-center justify-between">
    <a href="{{ path('app_roysched_index') }}" 
       class="inline-flex items-center gap-2 rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm font-semibold text-gray-700 shadow-sm transition hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700">
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Zurück zur Liste
    </a>
</div>

<!-- Form Card -->
<div class="rounded-lg border border-gray-200 bg-white shadow-sm dark:border-gray-800 dark:bg-gray-900">
    <!-- Card Header -->
    <div class="border-b border-gray-200 px-6 py-4 dark:border-gray-800">
        <div class="flex items-center gap-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-purple-100 dark:bg-purple-900/20">
                <svg class="h-6 w-6 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                </svg>
            </div>
            <div>
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
                    Tantiemenplan erstellen
                </h3>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                    Neuen Tantiemenplan für ein Buch hinzufügen
                </p>
            </div>
        </div>
    </div>

    <!-- Form Content -->
    <div class="p-6">
        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
            <div class="grid grid-cols-1 gap-6">
                <!-- Title Selection -->
                <div>
                    {{ form_row(form.title, {
                        'label': 'Buchtitel auswählen',
                        'attr': {
                            'class': 'mt-1 block w-full rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm text-gray-900 focus:border-blue-500 focus:ring-2 focus:ring-blue-500 dark:border-gray-700 dark:bg-gray-800 dark:text-white dark:focus:border-blue-500'
                        },
                        'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300'}
                    }) }}
                    <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                        Wählen Sie das Buch aus, für das Sie einen Tantiemenplan erstellen möchten
                    </p>
                </div>

                <!-- Form Fields in 2 Column Grid -->
                <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
                    <div>
                        {{ form_row(form.lorange, {
                            'label': 'Von (Unterer Bereich)',
                            'attr': {
                                'class': 'mt-1 block w-full rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm text-gray-900 focus:border-blue-500 focus:ring-2 focus:ring-blue-500 dark:border-gray-700 dark:bg-gray-800 dark:text-white dark:focus:border-blue-500',
                                'placeholder': '0'
                            },
                            'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300'}
                        }) }}
                        <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                            Untere Verkaufsgrenze (Einheiten)
                        </p>
                    </div>

                    <div>
                        {{ form_row(form.hirange, {
                            'label': 'Bis (Oberer Bereich)',
                            'attr': {
                                'class': 'mt-1 block w-full rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm text-gray-900 focus:border-blue-500 focus:ring-2 focus:ring-blue-500 dark:border-gray-700 dark:bg-gray-800 dark:text-white dark:focus:border-blue-500',
                                'placeholder': '5000'
                            },
                            'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300'}
                        }) }}
                        <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                            Obere Verkaufsgrenze (Einheiten)
                        </p>
                    </div>
                </div>

                <div>
                    {{ form_row(form.royalty, {
                        'label': 'Tantiemenrate (%)',
                        'attr': {
                            'class': 'mt-1 block w-full rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm text-gray-900 focus:border-blue-500 focus:ring-2 focus:ring-blue-500 dark:border-gray-700 dark:bg-gray-800 dark:text-white dark:focus:border-blue-500',
                            'placeholder': '10',
                            'min': '0',
                            'max': '100'
                        },
                        'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300'}
                    }) }}
                    <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                        Tantiemenrate als Prozentsatz (0-100)
                    </p>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="flex items-center justify-end gap-3 border-t border-gray-200 pt-6 dark:border-gray-800">
                <a href="{{ path('app_roysched_index') }}" 
                   class="rounded-lg border border-gray-300 bg-white px-4 py-2.5 text-sm font-semibold text-gray-700 shadow-sm transition hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700">
                    Abbrechen
                </a>
                <button type="submit" 
                        class="inline-flex items-center gap-2 rounded-lg bg-blue-600 px-4 py-2.5 text-sm font-semibold text-white shadow-sm transition hover:bg-blue-700 dark:bg-blue-500 dark:hover:bg-blue-600">
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                    Tantiemenplan erstellen
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>

<!-- Help Card -->
<div class="mt-6 rounded-lg border border-blue-200 bg-blue-50 p-4 dark:border-blue-900/50 dark:bg-blue-900/10">
    <div class="flex gap-3">
        <svg class="h-5 w-5 flex-shrink-0 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <div class="text-sm text-blue-800 dark:text-blue-300">
            <p class="font-semibold">Hinweis:</p>
            <ul class="mt-2 list-inside list-disc space-y-1">
                <li>Wählen Sie zuerst das Buch aus der Dropdown-Liste</li>
                <li>Verkaufsbereiche (Von/Bis) müssen gültige positive Zahlen sein</li>
                <li>Tantiemenrate muss zwischen 0 und 100 liegen</li>
                <li>Der obere Bereich sollte größer als der untere Bereich sein</li>
                <li>Sie können mehrere Tantiemenpläne für dasselbe Buch mit verschiedenen Bereichen erstellen</li>
            </ul>
        </div>
    </div>
</div>
{% endblock %}
