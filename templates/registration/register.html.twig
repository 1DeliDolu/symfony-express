<!DOCTYPE html>
<html lang="tr" x-data="{ darkMode: false }"
      x-init="darkMode = JSON.parse(localStorage.getItem('darkMode')); $watch('darkMode', value => localStorage.setItem('darkMode', JSON.stringify(value)))"
      :class="{'dark': darkMode === true}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kayıt Ol - Pubs Admin</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
    <style>
        @keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-20px); }
        }
        .animate-float {
            animation: float 6s ease-in-out infinite;
        }
        @keyframes pulse-slow {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }
        .animate-pulse-slow {
            animation: pulse-slow 4s ease-in-out infinite;
        }
    </style>
</head>
<body class="bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-900 dark:to-gray-800">
    <div class="flex min-h-screen">
        <!-- Form Section -->
        <div class="flex w-full flex-col lg:w-1/2">
            <div class="flex flex-1 flex-col justify-center px-6 py-12 lg:px-8">
                <div class="mx-auto w-full max-w-md">
                    <!-- Logo/Brand -->
                    <div class="mb-10 text-center lg:text-left">
                        <div class="mb-4 flex justify-center lg:justify-start">
                            <div class="flex h-16 w-16 items-center justify-center rounded-2xl bg-gradient-to-br from-green-500 to-emerald-600 shadow-lg shadow-green-500/30">
                                <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
                                </svg>
                            </div>
                        </div>
                        <h1 class="bg-gradient-to-r from-green-600 to-emerald-800 bg-clip-text text-3xl font-bold text-transparent dark:from-green-400 dark:to-emerald-600">
                            Pubs Admin
                        </h1>
                        <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
                            Yeni hesap oluşturun
                        </p>
                    </div>

                    <!-- Sign Up Form -->
                    <div class="rounded-2xl bg-white p-8 shadow-xl shadow-gray-200/50 dark:bg-gray-800 dark:shadow-gray-900/50">
                        <div class="mb-8">
                            <h2 class="text-2xl font-bold text-gray-900 dark:text-white">
                                Kayıt Ol
                            </h2>
                            <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">
                                Admin hesabınızı oluşturmak için bilgilerinizi girin
                            </p>
                        </div>

                        {# Flash mesajları #}
                        {% for flash_error in app.flashes('verify_email_error') %}
                            <div class="mb-4 flex items-start gap-3 rounded-xl border border-red-200 bg-red-50 p-4 dark:border-red-800 dark:bg-red-900/20">
                                <svg class="h-5 w-5 flex-shrink-0 text-red-600 dark:text-red-400" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                                </svg>
                                <span class="text-sm text-red-800 dark:text-red-400">
                                    {{ flash_error }}
                                </span>
                            </div>
                        {% endfor %}

                        {{ form_start(registrationForm, {'attr': {'class': 'space-y-5'}}) }}
                            <!-- Email -->
                            <div class="group">
                                <label for="{{ registrationForm.email.vars.id }}" class="mb-2 block text-sm font-semibold text-gray-700 dark:text-gray-300">
                                    <span class="flex items-center gap-2">
                                        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"/>
                                        </svg>
                                        E-posta Adresi
                                    </span>
                                </label>
                                {{ form_widget(registrationForm.email, {
                                    'attr': {
                                        'class': 'w-full rounded-xl border-2 border-gray-200 bg-gray-50 px-4 py-3.5 text-gray-900 placeholder-gray-400 outline-none transition-all duration-200 focus:border-green-500 focus:bg-white focus:ring-4 focus:ring-green-500/10 dark:border-gray-700 dark:bg-gray-900/50 dark:text-white dark:placeholder-gray-500 dark:focus:border-green-500 dark:focus:bg-gray-900',
                                        'placeholder': 'ornek@email.com'
                                    }
                                }) }}
                                {% if form_errors(registrationForm.email) %}
                                    <p class="mt-2 flex items-center gap-1 text-sm text-red-600 dark:text-red-400">
                                        <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/></svg>
                                        {{ form_errors(registrationForm.email) }}
                                    </p>
                                {% endif %}
                            </div>

                            <!-- Password -->
                            <div class="group">
                                <label for="{{ registrationForm.plainPassword.first.vars.id }}" class="mb-2 block text-sm font-semibold text-gray-700 dark:text-gray-300">
                                    <span class="flex items-center gap-2">
                                        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                                        </svg>
                                        Şifre
                                    </span>
                                </label>
                                {{ form_widget(registrationForm.plainPassword.first, {
                                    'attr': {
                                        'class': 'w-full rounded-xl border-2 border-gray-200 bg-gray-50 px-4 py-3.5 text-gray-900 placeholder-gray-400 outline-none transition-all duration-200 focus:border-green-500 focus:bg-white focus:ring-4 focus:ring-green-500/10 dark:border-gray-700 dark:bg-gray-900/50 dark:text-white dark:placeholder-gray-500 dark:focus:border-green-500 dark:focus:bg-gray-900',
                                        'placeholder': '••••••••'
                                    }
                                }) }}
                                {% if form_errors(registrationForm.plainPassword.first) %}
                                    <p class="mt-2 flex items-center gap-1 text-sm text-red-600 dark:text-red-400">
                                        <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/></svg>
                                        {{ form_errors(registrationForm.plainPassword.first) }}
                                    </p>
                                {% endif %}
                            </div>

                            <!-- Password Confirmation -->
                            <div class="group">
                                <label for="{{ registrationForm.plainPassword.second.vars.id }}" class="mb-2 block text-sm font-semibold text-gray-700 dark:text-gray-300">
                                    <span class="flex items-center gap-2">
                                        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                                        </svg>
                                        Şifre Tekrarı
                                    </span>
                                </label>
                                {{ form_widget(registrationForm.plainPassword.second, {
                                    'attr': {
                                        'class': 'w-full rounded-xl border-2 border-gray-200 bg-gray-50 px-4 py-3.5 text-gray-900 placeholder-gray-400 outline-none transition-all duration-200 focus:border-green-500 focus:bg-white focus:ring-4 focus:ring-green-500/10 dark:border-gray-700 dark:bg-gray-900/50 dark:text-white dark:placeholder-gray-500 dark:focus:border-green-500 dark:focus:bg-gray-900',
                                        'placeholder': '••••••••'
                                    }
                                }) }}
                                {% if form_errors(registrationForm.plainPassword.second) %}
                                    <p class="mt-2 flex items-center gap-1 text-sm text-red-600 dark:text-red-400">
                                        <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/></svg>
                                        {{ form_errors(registrationForm.plainPassword.second) }}
                                    </p>
                                {% endif %}
                            </div>

                            <!-- Terms Agreement -->
                            <div class="flex items-start gap-3">
                                {{ form_widget(registrationForm.agreeTerms, {
                                    'attr': {
                                        'class': 'mt-1 h-4 w-4 rounded border-gray-300 text-green-600 transition focus:ring-2 focus:ring-green-500/30 dark:border-gray-600 dark:bg-gray-700'
                                    }
                                }) }}
                                <div class="flex-1">
                                    <label for="{{ registrationForm.agreeTerms.vars.id }}" class="cursor-pointer text-sm font-medium text-gray-700 dark:text-gray-300">
                                        Kullanım şartlarını ve gizlilik politikasını kabul ediyorum
                                    </label>
                                    {% if form_errors(registrationForm.agreeTerms) %}
                                        <p class="mt-1 flex items-center gap-1 text-sm text-red-600 dark:text-red-400">
                                            <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/></svg>
                                            {{ form_errors(registrationForm.agreeTerms) }}
                                        </p>
                                    {% endif %}
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <button
                                type="submit"
                                class="group relative w-full overflow-hidden rounded-xl bg-gradient-to-r from-green-600 to-emerald-700 px-4 py-3.5 text-sm font-bold text-white shadow-lg shadow-green-500/30 transition-all duration-300 hover:shadow-xl hover:shadow-green-500/40 focus:outline-none focus:ring-4 focus:ring-green-500/30 active:scale-[0.98] dark:from-green-500 dark:to-emerald-600"
                            >
                                <span class="relative z-10 flex items-center justify-center gap-2">
                                    <svg class="h-5 w-5 transition-transform duration-300 group-hover:scale-110" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                    </svg>
                                    Hesap Oluştur
                                </span>
                                <span class="absolute inset-0 -z-10 bg-gradient-to-r from-green-700 to-emerald-800 opacity-0 transition-opacity duration-300 group-hover:opacity-100"></span>
                            </button>
                        {{ form_end(registrationForm) }}

                        <!-- Login Link -->
                        <div class="mt-8 text-center">
                            <p class="text-sm text-gray-600 dark:text-gray-400">
                                Zaten hesabınız var mı?
                                <a href="{{ path('app_login') }}" class="font-bold text-green-600 transition-colors hover:text-green-700 dark:text-green-400 dark:hover:text-green-300">
                                    Giriş Yap →
                                </a>
                            </p>
                        </div>
                    </div>

                    <!-- Dark Mode Toggle -->
                    <div class="mt-8 flex justify-center">
                        <button
                            @click="darkMode = !darkMode"
                            class="group flex h-12 w-12 items-center justify-center rounded-xl border-2 border-gray-200 bg-white text-gray-600 shadow-md transition-all duration-300 hover:border-green-300 hover:bg-green-50 hover:text-green-600 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:hover:border-green-600 dark:hover:bg-gray-700 dark:hover:text-green-400"
                        >
                            <svg x-show="!darkMode" class="h-5 w-5 fill-current transition-transform duration-300 group-hover:rotate-180" viewBox="0 0 20 20">
                                <path d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"/>
                            </svg>
                            <svg x-show="darkMode" class="h-5 w-5 fill-current transition-transform duration-300 group-hover:-rotate-12" viewBox="0 0 20 20">
                                <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"/>
                            </svg>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Image Section -->
        <div class="relative hidden overflow-hidden lg:block lg:w-1/2">
            <div class="absolute inset-0 bg-gradient-to-br from-green-600 via-emerald-700 to-teal-800 dark:from-green-800 dark:via-emerald-900 dark:to-teal-950">
                <!-- Animated Background Shapes -->
                <div class="absolute -right-20 -top-20 h-80 w-80 animate-pulse-slow rounded-full bg-emerald-500/20"></div>
                <div class="absolute -bottom-20 -left-20 h-80 w-80 animate-pulse-slow rounded-full bg-teal-500/20" style="animation-delay: 2s;"></div>
                
                <div class="flex h-full flex-col items-center justify-center px-12 text-white">
                    <!-- Animated Icon -->
                    <div class="animate-float mb-12">
                        <div class="rounded-3xl bg-white/10 p-8 shadow-2xl backdrop-blur-sm">
                            <svg class="h-24 w-24 text-white drop-shadow-lg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
                            </svg>
                        </div>
                    </div>
                    
                    <div class="max-w-md text-center">
                        <h2 class="mb-4 text-4xl font-bold leading-tight">
                            Ekibimize<br/>
                            <span class="bg-gradient-to-r from-emerald-200 to-teal-200 bg-clip-text text-transparent">Katılın</span>
                        </h2>
                        <p class="text-lg leading-relaxed text-emerald-100">
                            Modern ve güçlü yayıncılık yönetim sistemimizle tanışın
                        </p>
                        
                        <!-- Feature List -->
                        <div class="mt-10 space-y-4 text-left">
                            <div class="flex items-center gap-3">
                                <div class="flex h-10 w-10 items-center justify-center rounded-xl bg-white/20 backdrop-blur-sm">
                                    <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                    </svg>
                                </div>
                                <span class="text-emerald-100">Kolay ve hızlı kurulum</span>
                            </div>
                            <div class="flex items-center gap-3">
                                <div class="flex h-10 w-10 items-center justify-center rounded-xl bg-white/20 backdrop-blur-sm">
                                    <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                    </svg>
                                </div>
                                <span class="text-emerald-100">Modern arayüz ve kullanım</span>
                            </div>
                            <div class="flex items-center gap-3">
                                <div class="flex h-10 w-10 items-center justify-center rounded-xl bg-white/20 backdrop-blur-sm">
                                    <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                    </svg>
                                </div>
                                <span class="text-emerald-100">7/24 güvenli erişim</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% block javascripts %}
        <script src="//unpkg.com/alpinejs" defer></script>
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</body>
</html>
