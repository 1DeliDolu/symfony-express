{#
    Reusable main content wrapper with modern styling

    Usage:
    {% embed 'base/main.html.twig' with {
        'container_class': 'max-w-7xl', // Optional container class
        'bg_color': 'bg-gray-50' // Optional background color
    } %}
        {% block main_content %}
            Your main content here
        {% endblock %}
    {% endembed %}
#}

{% set container_class = container_class|default('max-w-7xl') %}
{% set bg_color = bg_color|default('bg-gray-50 dark:bg-gray-950') %}
{% set padding = padding|default('py-8') %}

<main class="{{ bg_color }} min-h-screen {{ padding }}">
    <div class="{{ container_class }} mx-auto px-4 sm:px-6 lg:px-8">
        {# Flash Messages #}
        {% if app.flashes|length > 0 %}
            <div class="mb-6 space-y-3">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="rounded-lg px-4 py-3 flex items-start {{ label == 'success' ? 'bg-green-50 border border-green-200 text-green-800 dark:bg-green-900/20 dark:border-green-800 dark:text-green-300' : label == 'error' ? 'bg-red-50 border border-red-200 text-red-800 dark:bg-red-900/20 dark:border-red-800 dark:text-red-300' : 'bg-blue-50 border border-blue-200 text-blue-800 dark:bg-blue-900/20 dark:border-blue-800 dark:text-blue-300' }}">
                            <svg class="w-5 h-5 mr-3 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                                {% if label == 'success' %}
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                                {% elseif label == 'error' %}
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                                {% else %}
                                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                                {% endif %}
                            </svg>
                            <span>{{ message }}</span>
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
        {% endif %}

        {# Main Content Block #}
        {% block main_content %}
            {# Default content or override this block #}
        {% endblock %}
    </div>
</main>
