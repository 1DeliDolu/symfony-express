        {% block stylesheets %}
        {% endblock %}

        <style>
            [x-cloak] { display: none !important; }
        </style>

        {% block javascripts %}
            <script src="//unpkg.com/alpinejs" defer></script>
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
