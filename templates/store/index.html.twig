{% extends 'admin_base.html.twig' %}

{% block title %}Mağazalar{% endblock %}
{% block page_title %}Mağaza Yönetimi{% endblock %}

{% block body %}
<style>
[x-cloak] { display: none !important; }
</style>

{% set storesJson = stores|json_encode(constant('JSON_UNESCAPED_UNICODE'))|raw %}

<div x-data="{
  q: '',
  sort: {key: 'storName', dir: 'asc'},
  rows: {{ storesJson }},
  get filtered() {
    let r = this.rows.filter(x => {
      let searchStr = [x.storId, x.storName, x.storAddress, x.city, x.state, x.zip].join(' ').toLowerCase();
      return searchStr.includes(this.q.toLowerCase());
    });
    r.sort((a,b) => {
      const k = this.sort.key, d = this.sort.dir === 'asc' ? 1 : -1;
      let aVal = a[k] || '';
      let bVal = b[k] || '';
      return (aVal > bVal ? 1 : aVal < bVal ? -1 : 0) * d;
    });
    return r;
  },
  setSort(k) { 
    this.sort.dir = (this.sort.key === k && this.sort.dir === 'asc') ? 'desc' : 'asc'; 
    this.sort.key = k; 
  }
}">

  <!-- Header with Search -->
  <div class="mb-4 flex items-center justify-between gap-3">
    <input x-model="q" type="text" placeholder="Mağaza ara..."
           class="w-full rounded-lg border border-gray-300 px-4 py-2.5 text-sm focus:border-blue-500 focus:ring-blue-500 dark:border-gray-600 dark:bg-gray-800 dark:text-white"/>
    <div class="flex items-center gap-3">
      <span class="text-sm text-gray-600 dark:text-gray-400 whitespace-nowrap" x-text="filtered.length + ' Mağaza'"></span>
      <a href="{{ path('app_store_new') }}" 
         class="inline-flex items-center gap-2 rounded-lg bg-blue-600 px-4 py-2.5 text-sm font-semibold text-white hover:bg-blue-700 dark:bg-blue-500 dark:hover:bg-blue-600 whitespace-nowrap">
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Yeni Mağaza
      </a>
    </div>
  </div>

  <!-- Table -->
  <div class="overflow-x-auto rounded-xl border border-gray-200 bg-white shadow-sm dark:border-gray-800 dark:bg-gray-900">
    <table class="min-w-full text-sm">
      <thead class="bg-gray-50 text-gray-600 dark:bg-gray-800 dark:text-gray-400">
        <tr>
          <th class="px-4 py-3 text-left">
            <button @click="setSort('storId')" class="font-semibold hover:underline">
              ID <span x-show="sort.key==='storId'">(<span x-text="sort.dir"></span>)</span>
            </button>
          </th>
          <th class="px-4 py-3 text-left">
            <button @click="setSort('storName')" class="font-semibold hover:underline">
              Mağaza Adı <span x-show="sort.key==='storName'">(<span x-text="sort.dir"></span>)</span>
            </button>
          </th>
          <th class="px-4 py-3 text-left">
            <button @click="setSort('storAddress')" class="font-semibold hover:underline">
              Adres <span x-show="sort.key==='storAddress'">(<span x-text="sort.dir"></span>)</span>
            </button>
          </th>
          <th class="px-4 py-3 text-left">
            <button @click="setSort('city')" class="font-semibold hover:underline">
              Şehir <span x-show="sort.key==='city'">(<span x-text="sort.dir"></span>)</span>
            </button>
          </th>
          <th class="px-4 py-3 text-left">
            <button @click="setSort('state')" class="font-semibold hover:underline">
              Eyalet <span x-show="sort.key==='state'">(<span x-text="sort.dir"></span>)</span>
            </button>
          </th>
          <th class="px-4 py-3 text-left">
            <button @click="setSort('zip')" class="font-semibold hover:underline">
              Posta Kodu <span x-show="sort.key==='zip'">(<span x-text="sort.dir"></span>)</span>
            </button>
          </th>
          <th class="px-4 py-3 text-right">Aksiyonlar</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-100 dark:divide-gray-800">
        <template x-for="store in filtered" :key="store.storId">
          <tr class="odd:bg-white even:bg-gray-50 hover:bg-blue-50/50 dark:odd:bg-gray-900 dark:even:bg-gray-800 dark:hover:bg-blue-900/20">
            <td class="px-4 py-3">
              <span class="font-mono text-xs font-medium text-gray-900 dark:text-white" x-text="store.storId"></span>
            </td>
            <td class="px-4 py-3">
              <div class="flex items-center gap-2">
                <div class="flex h-8 w-8 items-center justify-center rounded-full bg-orange-100 text-sm font-semibold text-orange-700 dark:bg-orange-900/30 dark:text-orange-400">
                  <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                  </svg>
                </div>
                <span class="font-medium text-gray-900 dark:text-white" x-text="store.storName"></span>
              </div>
            </td>
            <td class="px-4 py-3 text-gray-700 dark:text-gray-300" x-text="store.storAddress"></td>
            <td class="px-4 py-3 text-gray-700 dark:text-gray-300" x-text="store.city"></td>
            <td class="px-4 py-3">
              <span class="inline-flex items-center rounded-full bg-purple-100 px-2.5 py-0.5 text-xs font-medium text-purple-800 dark:bg-purple-900/20 dark:text-purple-400" 
                    x-text="store.state"></span>
            </td>
            <td class="px-4 py-3">
              <span class="font-mono text-xs text-gray-600 dark:text-gray-400" x-text="store.zip"></span>
            </td>
            <td class="px-4 py-3 text-right">
              <div class="inline-flex items-center gap-1">
                <a :href="`{{ path('app_store_show', {'storId': '__ID__'}) }}`.replace('__ID__', store.storId)" 
                   class="rounded-lg bg-blue-600 px-3 py-1.5 text-white hover:bg-blue-700 dark:bg-blue-500 dark:hover:bg-blue-600">
                  Görüntüle
                </a>
                <a :href="`{{ path('app_store_edit', {'storId': '__ID__'}) }}`.replace('__ID__', store.storId)" 
                   class="rounded-lg bg-green-600 px-3 py-1.5 text-white hover:bg-green-700 dark:bg-green-500 dark:hover:bg-green-600">
                  Düzenle
                </a>
              </div>
            </td>
          </tr>
        </template>
        <tr x-show="filtered.length === 0">
          <td colspan="7" class="px-6 py-12 text-center">
            <p class="text-gray-600 dark:text-gray-400">Mağaza bulunamadı</p>
            <button @click="q=''" class="mt-2 text-sm font-medium text-blue-600 hover:underline dark:text-blue-400">
              Aramayı temizle
            </button>
          </td>
        </tr>
      </tbody>
    </table>
  </div>

</div>
{% endblock %}
