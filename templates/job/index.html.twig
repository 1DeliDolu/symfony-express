{% extends 'base.html.twig' %}

{% block title %}Job index{% endblock %}

{% block body %}
    <h1>Job index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>JobId</th>
                <th>JobDesc</th>
                <th>MinLvl</th>
                <th>MaxLvl</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for job in jobs %}
            <tr>
                <td>{{ job.jobId }}</td>
                <td>{{ job.jobDesc }}</td>
                <td>{{ job.minLvl }}</td>
                <td>{{ job.maxLvl }}</td>
                <td>
                    <a href="{{ path('app_job_show', {'jobId': job.jobId}) }}">show</a>
                    <a href="{{ path('app_job_edit', {'jobId': job.jobId}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_job_new') }}">Create new</a>
{% endblock %}
