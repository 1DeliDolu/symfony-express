    <table class="table">
        <tbody>
            <tr>
                <th>PubId</th>
                <td>{{ publisher.pubId }}</td>
            </tr>
            <tr>
                <th>PubName</th>
                <td>{{ publisher.pubName }}</td>
            </tr>
            <tr>
