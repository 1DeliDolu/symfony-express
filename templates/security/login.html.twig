<!DOCTYPE html>
<html lang="tr"
      x-data="{ darkMode: JSON.parse(localStorage.getItem('darkMode')) || false }"
      x-init="$watch('darkMode', val => localStorage.setItem('darkMode', JSON.stringify(val)))"
      :class="{ 'dark': darkMode }">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giriş Yap | Pubs Admin</title>
    {% block stylesheets %}
        {{ importmap('app') }}
    {% endblock %}

    <style>
        @keyframes float {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-15px); }
        }
        .animate-float { animation: float 5s ease-in-out infinite; }

        @keyframes fade-in {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .fade-in { animation: fade-in 0.8s ease forwards; }
    </style>
</head>

<body class="min-h-screen flex bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-900 dark:to-gray-800 transition-colors duration-500">
    <!-- Left Section -->
    <div class="flex flex-col justify-center w-full lg:w-1/2 px-6 py-12 fade-in">
        <div class="max-w-md mx-auto w-full">
            <!-- Logo -->
            <div class="text-center mb-10">
                <div class="mx-auto mb-6 flex h-16 w-16 items-center justify-center rounded-2xl bg-gradient-to-br from-blue-600 to-indigo-700 shadow-lg shadow-blue-500/40">
                    <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                    </svg>
                </div>
                <h1 class="text-3xl font-bold bg-gradient-to-r from-blue-600 to-indigo-600 bg-clip-text text-transparent dark:from-blue-400 dark:to-indigo-400">
                    Pubs Admin Panel
                </h1>
                <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">Sisteme giriş yapın</p>
            </div>

            <!-- Error Message -->
            {% if error %}
                <div class="mb-4 rounded-xl border border-red-200 bg-red-50 p-4 text-red-700 dark:border-red-800 dark:bg-red-900/20 dark:text-red-400">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <!-- Logged User Info -->
            {% if app.user %}
                <div class="mb-4 rounded-xl border border-blue-200 bg-blue-50 p-4 text-blue-700 dark:border-blue-700 dark:bg-blue-900/20 dark:text-blue-400">
                    {{ app.user.userIdentifier }} olarak giriş yaptınız.
                    <a href="{{ path('app_logout') }}" class="font-semibold underline hover:no-underline">Çıkış Yap</a>
                </div>
            {% endif %}

            <!-- Login Form -->
            <div class="bg-white/80 dark:bg-gray-800/70 backdrop-blur-md rounded-2xl shadow-lg p-8 ring-1 ring-gray-100/50 dark:ring-gray-700/50">
                <form method="post" class="space-y-5">
                    <div>
                        <label for="username" class="block text-sm font-medium text-gray-700 dark:text-gray-300">E-posta</label>
                        <input type="email" id="username" name="_username" value="{{ last_username }}"
                               required autofocus autocomplete="email"
                               class="mt-1 block w-full rounded-lg border border-gray-300 bg-gray-50 px-4 py-2.5 text-gray-900 placeholder-gray-400 focus:border-blue-500 focus:ring-blue-500 dark:border-gray-700 dark:bg-gray-900 dark:text-gray-100 transition-all duration-200"
                               placeholder="ornek@email.com">
                    </div>

                    <div>
                        <label for="password" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Şifre</label>
                        <input type="password" id="password" name="_password" required autocomplete="current-password"
                               class="mt-1 block w-full rounded-lg border border-gray-300 bg-gray-50 px-4 py-2.5 text-gray-900 placeholder-gray-400 focus:border-blue-500 focus:ring-blue-500 dark:border-gray-700 dark:bg-gray-900 dark:text-gray-100 transition-all duration-200"
                               placeholder="••••••••">
                    </div>

                    <div class="flex items-center justify-between text-sm">
                        <label class="flex items-center gap-2 text-gray-700 dark:text-gray-300">
                            <input type="checkbox" name="_remember_me" class="h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500 dark:border-gray-600 dark:bg-gray-700">
                            Beni hatırla
                        </label>
                        <a href="#" class="text-blue-600 hover:underline dark:text-blue-400">Şifremi unuttum?</a>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <button type="submit"
                            class="w-full rounded-lg bg-gradient-to-r from-blue-600 to-indigo-700 py-2.5 text-white font-semibold shadow-md hover:from-blue-700 hover:to-indigo-800 focus:ring-4 focus:ring-blue-500/30 active:scale-[0.98] transition-transform">
                        Giriş Yap
                    </button>
                </form>

                <p class="mt-6 text-center text-sm text-gray-600 dark:text-gray-400">
                    Henüz hesabınız yok mu?
                    <a href="{{ path('app_register') }}" class="font-semibold text-blue-600 hover:text-indigo-600 dark:text-blue-400 dark:hover:text-blue-300">
                        Kayıt Ol
                    </a>
                </p>
            </div>

            <!-- Dark Mode Toggle -->
            <div class="mt-6 flex justify-center">
                <button @click="darkMode = !darkMode"
                        class="rounded-full p-3 text-gray-500 hover:text-blue-600 dark:text-gray-400 dark:hover:text-blue-400 transition">
                    <template x-if="!darkMode">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m4.22 1.78l.7.7m3.08 5.52H21m-1.78 4.22l-.7.7M12 21v-1m-4.22-1.78l-.7-.7M3 12h1m1.78-4.22l.7-.7M16.24 7.76A5 5 0 107.76 16.24 5 5 0 0016.24 7.76z" />
                        </svg>
                    </template>
                    <template x-if="darkMode">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12.79A9 9 0 1111.21 3 7 7 0 0021 12.79z" />
                        </svg>
                    </template>
                </button>
            </div>
        </div>
    </div>

    <!-- Right Section -->
    <div class="hidden lg:flex lg:w-1/2 items-center justify-center bg-gradient-to-br from-blue-700 via-indigo-700 to-indigo-900 relative overflow-hidden">
        <div class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1507842217343-583bb7270b66')] bg-cover bg-center opacity-20"></div>
        <div class="relative text-center text-white z-10 px-10">
            <div class="animate-float mx-auto mb-10">
                <svg class="h-20 w-20 mx-auto text-white/80" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                </svg>
            </div>
            <h2 class="text-4xl font-bold leading-tight mb-4">Pubs Yayıncılık Yönetim Sistemi</h2>
            <p class="text-blue-100 text-lg max-w-md mx-auto">
                Kitaplarınızı, yazarlarınızı ve satışlarınızı tek bir yerden yönetin.
            </p>
        </div>
    </div>
</body>
</html>
