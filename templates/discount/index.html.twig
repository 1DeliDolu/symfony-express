{% extends 'base.html.twig' %}

{% block title %}Discount index{% endblock %}

{% block body %}
    <h1>Discount index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>DiscountType</th>
                <th>LowQty</th>
                <th>HighQty</th>
                <th>Discount</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for discount in discounts %}
            <tr>
                <td>{{ discount.discountType }}</td>
                <td>{{ discount.lowQty }}</td>
                <td>{{ discount.highQty }}</td>
                <td>{{ discount.discount }}</td>
                <td>
                    <a href="{{ path('app_discount_show', {'discountType': discount.discountType}) }}">show</a>
                    <a href="{{ path('app_discount_edit', {'discountType': discount.discountType}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_discount_new') }}">Create new</a>
{% endblock %}
