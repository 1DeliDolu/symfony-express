{% extends 'base.html.twig' %}

{% block title %}Datenbank Auswahl{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 dark:from-gray-900 dark:to-gray-800 flex items-center justify-center p-4">
    <div class="max-w-6xl w-full">
        <!-- Header -->
        <div class="text-center mb-12">
            <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
                Express Pubs
            </h1>
            <p class="text-xl text-gray-600 dark:text-gray-300">
                Wählen Sie Ihre Datenbank zum Verwalten
            </p>
        </div>

        <!-- Database Cards -->
        <div class="grid md:grid-cols-2 gap-8">
            <!-- Pubs Database Card -->
            <div class="group">
                <a href="{{ path('app_dashboard_pubs') }}" class="block h-full">
                    <div class="h-full rounded-2xl border-2 border-gray-200 bg-white p-8 shadow-lg transition-all duration-300 hover:border-blue-500 hover:shadow-2xl hover:-translate-y-2 dark:border-gray-700 dark:bg-gray-800 dark:hover:border-blue-400">
                        <div class="flex flex-col items-center text-center space-y-6">
                            <!-- Icon -->
                            <div class="w-24 h-24 rounded-full bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center transition-colors group-hover:bg-blue-500 dark:group-hover:bg-blue-600">
                                <svg class="w-12 h-12 fill-blue-600 dark:fill-blue-400 transition-colors group-hover:fill-white" viewBox="0 0 24 24">
                                    <path d="M6 2h12a2 2 0 012 2v16a2 2 0 01-2 2H6a2 2 0 01-2-2V4a2 2 0 012-2zm1 2v16h10V4H7zm2 2h6v2H9V6zm0 4h6v2H9v-2zm0 4h4v2H9v-2z"/>
                                </svg>
                            </div>
                            
                            <!-- Title -->
                            <h2 class="text-3xl font-bold text-gray-900 dark:text-white">
                                Pubs
                            </h2>
                            
                            <!-- Description -->
                            <p class="text-gray-600 dark:text-gray-300">
                                Verwalten Sie Bücher, Autoren, Verlage und Verkäufe
                            </p>
                            
                            <!-- Features -->
                            <ul class="text-sm text-gray-500 dark:text-gray-400 space-y-2">
                                <li class="flex items-center justify-center">
                                    <svg class="w-5 h-5 mr-2 fill-green-500" viewBox="0 0 24 24">
                                        <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"/>
                                    </svg>
                                    Bücherverwaltung
                                </li>
                                <li class="flex items-center justify-center">
                                    <svg class="w-5 h-5 mr-2 fill-green-500" viewBox="0 0 24 24">
                                        <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"/>
                                    </svg>
                                    Autoren & Verlage
                                </li>
                                <li class="flex items-center justify-center">
                                    <svg class="w-5 h-5 mr-2 fill-green-500" viewBox="0 0 24 24">
                                        <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"/>
                                    </svg>
                                    Verkaufsverfolgung
                                </li>
                            </ul>
                            
                            <!-- Button -->
                            <div class="pt-4">
                                <span class="inline-flex items-center px-6 py-3 rounded-full bg-blue-600 text-white font-semibold transition-colors group-hover:bg-blue-700">
                                    Dashboard öffnen
                                    <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                                    </svg>
                                </span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Northwind Database Card -->
            <div class="group">
                <a href="{{ path('app_dashboard_northwind') }}" class="block h-full">
                    <div class="h-full rounded-2xl border-2 border-gray-200 bg-white p-8 shadow-lg transition-all duration-300 hover:border-purple-500 hover:shadow-2xl hover:-translate-y-2 dark:border-gray-700 dark:bg-gray-800 dark:hover:border-purple-400">
                        <div class="flex flex-col items-center text-center space-y-6">
                            <!-- Icon -->
                            <div class="w-24 h-24 rounded-full bg-purple-100 dark:bg-purple-900/30 flex items-center justify-center transition-colors group-hover:bg-purple-500 dark:group-hover:bg-purple-600">
                                <svg class="w-12 h-12 fill-purple-600 dark:fill-purple-400 transition-colors group-hover:fill-white" viewBox="0 0 24 24">
                                    <path d="M20 6h-2.18c.11-.31.18-.65.18-1 0-1.66-1.34-3-3-3-1.05 0-1.96.54-2.5 1.35l-.5.67-.5-.68C10.96 2.54 10.05 2 9 2 7.34 2 6 3.34 6 5c0 .35.07.69.18 1H4c-1.11 0-1.99.89-1.99 2L2 19c0 1.11.89 2 2 2h16c1.11 0 2-.89 2-2V8c0-1.11-.89-2-2-2zm-5-2c.55 0 1 .45 1 1s-.45 1-1 1-1-.45-1-1 .45-1 1-1zM9 4c.55 0 1 .45 1 1s-.45 1-1 1-1-.45-1-1 .45-1 1-1zm11 15H4v-2h16v2zm0-5H4V8h5.08L7 10.83 8.62 12 12 7.4l3.38 4.6L17 10.83 14.92 8H20v6z"/>
                                </svg>
                            </div>
                            
                            <!-- Title -->
                            <h2 class="text-3xl font-bold text-gray-900 dark:text-white">
                                Northwind
                            </h2>
                            
                            <!-- Description -->
                            <p class="text-gray-600 dark:text-gray-300">
                                Verwalten Sie Produkte, Kunden, Bestellungen und Lieferanten
                            </p>
                            
                            <!-- Features -->
                            <ul class="text-sm text-gray-500 dark:text-gray-400 space-y-2">
                                <li class="flex items-center justify-center">
                                    <svg class="w-5 h-5 mr-2 fill-green-500" viewBox="0 0 24 24">
                                        <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"/>
                                    </svg>
                                    Produktverwaltung
                                </li>
                                <li class="flex items-center justify-center">
                                    <svg class="w-5 h-5 mr-2 fill-green-500" viewBox="0 0 24 24">
                                        <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"/>
                                    </svg>
                                    Kunden & Lieferanten
                                </li>
                                <li class="flex items-center justify-center">
                                    <svg class="w-5 h-5 mr-2 fill-green-500" viewBox="0 0 24 24">
                                        <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"/>
                                    </svg>
                                    Bestellungssystem
                                </li>
                            </ul>
                            
                            <!-- Button -->
                            <div class="pt-4">
                                <span class="inline-flex items-center px-6 py-3 rounded-full bg-purple-600 text-white font-semibold transition-colors group-hover:bg-purple-700">
                                    Dashboard öffnen
                                    <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                                    </svg>
                                </span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>

        <!-- Footer Note -->
        <div class="mt-12 text-center">
            <p class="text-sm text-gray-500 dark:text-gray-400">
                Beide Datenbanken bieten vollständige CRUD-Operationen und erweiterte Berichtsfunktionen
            </p>
        </div>
    </div>
</div>
{% endblock %}
