{% extends 'northwind_base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Category</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>CategoryName</th>
                <td>{{ category.categoryName }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ category.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_northwind_categories_index') }}" class="btn btn-secondary">back to list</a>

    <a href="{{ path('app_northwind_categories_edit', {'id': category.id}) }}" class="btn btn-warning">edit</a>

    {{ include('northwind/categories/_delete_form.html.twig') }}
{% endblock %}
