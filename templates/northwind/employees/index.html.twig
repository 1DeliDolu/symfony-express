{% extends 'northwind_base.html.twig' %}

{% block title %}Northwind Employees{% endblock %}
{% block page_title %}Mitarbeiter{% endblock %}

{% block body %}
<style>
[x-cloak] { display: none !important; }
</style>

{% set employeesJson = employees|map(e => {
id: e.id,
firstName: e.firstName,
lastName: e.lastName,
title: e.title,
city: e.city,
country: e.country,
hireDate: e.hireDate ? e.hireDate|date('Y-m-d') : null
})|json_encode(constant('JSON_UNESCAPED_UNICODE'))|raw %}

<div x-data="{
q: '',
sort: {key: 'lastName', dir: 'asc'}, 
rows: {{ employeesJson }},
get filtered() {
let r = this.rows.filter(x => {
let searchStr = [x.id, x.firstName, x.lastName, x.title||'', x.city||'', x.country||''].join(' ').toLowerCase();
return searchStr.includes(this.q.toLowerCase());
});
r.sort((a,b) => {
const k = this.sort.key, d = this.sort.dir === 'asc' ? 1 : -1;
let aVal = a[k] || '';
let bVal = b[k] || '';
return (aVal > bVal ? 1 : aVal < bVal ? -1 : 0) * d;
});
return r;
},
setSort(k) { 
this.sort.dir = (this.sort.key === k && this.sort.dir === 'asc') ? 'desc' : 'asc'; 
this.sort.key = k; 
}
}" class="container mx-auto px-4 py-8">

<!-- Header with Search -->
<div class="mb-6">
<div class="flex items-center justify-between mb-4">
<div>
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Northwind Employees</h1>
    <p class="text-gray-600 dark:text-gray-400 mt-2">List of employees from Northwind database</p>
</div>
</div>

    <div class="flex items-center gap-3">
        <input x-model="q" type="text" placeholder="Search employees..."
                class="flex-1 rounded-lg border border-gray-300 px-4 py-2.5 text-sm focus:border-indigo-500 focus:ring-indigo-500 dark:border-gray-600 dark:bg-gray-800 dark:text-white"/>
        <span class="text-sm text-gray-600 dark:text-gray-400 whitespace-nowrap" x-text="filtered.length + ' employees'"></span>
        <a href="{{ path('app_northwind_employees_new') }}" 
            class="inline-flex items-center gap-2 rounded-lg bg-green-600 px-4 py-2.5 text-sm font-semibold text-white hover:bg-green-700 dark:bg-green-500 dark:hover:bg-green-600 whitespace-nowrap">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            New Employee
        </a>   
    </div>
</div>

<!-- Table -->
<div class="overflow-x-auto rounded-xl border border-gray-200 bg-white shadow-sm dark:border-gray-800 dark:bg-gray-900">
<table class="min-w-full text-sm">
<thead class="bg-gray-50 text-gray-600 dark:bg-gray-800 dark:text-gray-400">
    <tr>
    <th class="px-6 py-3 text-left">
        <button @click="setSort('id')" class="font-semibold hover:underline uppercase text-xs">
        ID <span x-show="sort.key==='id'" x-text="'(' + sort.dir + ')'"></span>
        </button>
    </th>
    <th class="px-6 py-3 text-left">
        <button @click="setSort('firstName')" class="font-semibold hover:underline uppercase text-xs">
        First Name <span x-show="sort.key==='firstName'" x-text="'(' + sort.dir + ')'"></span>
        </button>
    </th>
    <th class="px-6 py-3 text-left">
        <button @click="setSort('lastName')" class="font-semibold hover:underline uppercase text-xs">
        Last Name <span x-show="sort.key==='lastName'" x-text="'(' + sort.dir + ')'"></span>
        </button>
    </th>
    <th class="px-6 py-3 text-left">
        <button @click="setSort('title')" class="font-semibold hover:underline uppercase text-xs">
        Title <span x-show="sort.key==='title'" x-text="'(' + sort.dir + ')'"></span>
        </button>
    </th>
    <th class="px-6 py-3 text-left">
        <button @click="setSort('city')" class="font-semibold hover:underline uppercase text-xs">
        City <span x-show="sort.key==='city'" x-text="'(' + sort.dir + ')'"></span>
        </button>
    </th>
    <th class="px-6 py-3 text-left">
        <button @click="setSort('country')" class="font-semibold hover:underline uppercase text-xs">
        Country <span x-show="sort.key==='country'" x-text="'(' + sort.dir + ')'"></span>
        </button>
    </th>
    <th class="px-6 py-3 text-right uppercase text-xs">Actions</th>
    </tr>
</thead>
<tbody class="divide-y divide-gray-100 dark:divide-gray-800">
    <template x-for="emp in filtered" :key="emp.id">
    <tr class="odd:bg-white even:bg-gray-50 hover:bg-indigo-50/50 dark:odd:bg-gray-900 dark:even:bg-gray-800 dark:hover:bg-indigo-900/20">
        <td class="px-6 py-4">
        <span class="font-mono text-xs text-gray-900 dark:text-white" x-text="emp.id"></span>
        </td>
        <td class="px-6 py-4 text-gray-700 dark:text-gray-300">
        <div class="flex items-center gap-2">
            <div class="flex h-8 w-8 items-center justify-center rounded-full bg-indigo-100 text-sm font-semibold text-indigo-700 dark:bg-indigo-900/30 dark:text-indigo-400" 
                x-text="(emp.firstName?.charAt(0)||'?').toUpperCase()"></div>
            <span x-text="emp.firstName"></span>
        </div>
        </td>
        <td class="px-6 py-4 font-medium text-gray-900 dark:text-white" x-text="emp.lastName"></td>
        <td class="px-6 py-4">
        <span class="inline-flex items-center rounded-full bg-purple-100 px-2.5 py-0.5 text-xs font-medium text-purple-800 dark:bg-purple-900/20 dark:text-purple-400" 
                x-text="emp.title || '-'"></span>
        </td>
        <td class="px-6 py-4 text-gray-700 dark:text-gray-300" x-text="emp.city || '-'"></td>
        <td class="px-6 py-4 text-gray-700 dark:text-gray-300" x-text="emp.country || '-'"></td>
        <td class="px-6 py-4 text-right">
        <div class="inline-flex items-center gap-2">
            <a :href="`{{ path('app_northwind_employees_show', {'id': '__ID__'}) }}`.replace('__ID__', emp.id)" 
            class="rounded-lg bg-indigo-600 px-3 py-1.5 text-xs text-white hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-600">
            View
            </a>
            <a :href="`{{ path('app_northwind_employees_edit', {'id': '__ID__'}) }}`.replace('__ID__', emp.id)" 
            class="rounded-lg bg-green-600 px-3 py-1.5 text-xs text-white hover:bg-green-700 dark:bg-green-500 dark:hover:bg-green-600">
            Edit
            </a>
        </div>
        </td>
    </tr>
    </template>
    <tr x-show="filtered.length === 0" x-cloak>
    <td colspan="7" class="px-6 py-12 text-center">
        <p class="text-gray-600 dark:text-gray-400">No employees found</p>
        <button @click="q=''" class="mt-2 text-sm font-medium text-indigo-600 hover:underline dark:text-indigo-400">
        Reset search
        </button>
    </td>
    </tr>
</tbody>
</table>
</div>

</div>
{% endblock %}
