{% extends 'northwind_base.html.twig' %}

{% block page_title %}Orders{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-6">
    <!-- Header with filters -->
    <div class="mb-6 flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Orders</h1>
            <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">
                Showing {{ (current_page - 1) * per_page + 1 }} to {{ min(current_page * per_page, total_count) }} of {{ total_count }} orders (Page {{ current_page }} of {{ total_pages }})
            </p>
        </div>
    </div>

    <!-- Filter Form -->
    <div class="mb-6 rounded-lg bg-white p-4 shadow dark:bg-gray-800">
        <form method="GET" action="{{ path('app_northwind_orders') }}" class="flex flex-wrap gap-4">
            <div class="flex-1 min-w-[200px]">
                <label for="country" class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">
                    Ship Country
                </label>
                <select 
                    name="country" 
                    id="country"
                    class="w-full rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm focus:border-indigo-500 focus:ring-indigo-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white">
                    <option value="">All Countries</option>
                    {% for country in countries %}
                        <option value="{{ country }}" {% if filter_country == country %}selected{% endif %}>
                            {{ country }}
                        </option>
                    {% endfor %}
                </select>
            </div>

            <div class="flex-1 min-w-[200px]">
                <label for="customer" class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">
                    Customer ID
                </label>
                <input 
                    type="text" 
                    name="customer" 
                    id="customer"
                    value="{{ filter_customer }}"
                    placeholder="e.g., ALFKI"
                    class="w-full rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm focus:border-indigo-500 focus:ring-indigo-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white">
            </div>

            <div class="flex items-end gap-2">
                <button 
                    type="submit"
                    class="rounded-lg bg-indigo-600 px-6 py-2 text-sm font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-4 focus:ring-indigo-300 dark:bg-indigo-600 dark:hover:bg-indigo-700">
                    Filter
                </button>
                <a 
                    href="{{ path('app_northwind_orders') }}"
                    class="rounded-lg border border-gray-300 bg-white px-6 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:border-gray-600 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700">
                    Clear
                </a>
            </div>
        </form>
    </div>

    <!-- Orders Table -->
    <div class="overflow-hidden rounded-lg bg-white shadow dark:bg-gray-800">
        <div class="overflow-x-auto">
            <table class="w-full text-left text-sm text-gray-500 dark:text-gray-400">
                <thead class="bg-gray-50 text-xs uppercase text-gray-700 dark:bg-gray-700 dark:text-gray-400">
                    <tr>
                        <th scope="col" class="px-6 py-3">Order ID</th>
                        <th scope="col" class="px-6 py-3">Customer ID</th>
                        <th scope="col" class="px-6 py-3">Company Name</th>
                        <th scope="col" class="px-6 py-3">Order Date</th>
                        <th scope="col" class="px-6 py-3">Required Date</th>
                        <th scope="col" class="px-6 py-3">Ship Name</th>
                        <th scope="col" class="px-6 py-3">Ship City</th>
                        <th scope="col" class="px-6 py-3">Ship Country</th>
                        <th scope="col" class="px-6 py-3">Freight</th>
                        <th scope="col" class="px-6 py-3">Status</th>
                        <th scope="col" class="px-6 py-3">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for order in orders %}
                        <tr class="border-b bg-white hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-600">
                            <td class="px-6 py-4 font-medium text-gray-900 dark:text-white">
                                {{ order.OrderID }}
                            </td>
                            <td class="px-6 py-4">
                                {{ order.CustomerID }}
                            </td>
                            <td class="px-6 py-4">
                                {{ order.CompanyName }}
                            </td>
                            <td class="px-6 py-4">
                                {{ order.OrderDate ? order.OrderDate|date('Y-m-d') : 'N/A' }}
                            </td>
                            <td class="px-6 py-4">
                                {{ order.RequiredDate ? order.RequiredDate|date('Y-m-d') : 'N/A' }}
                            </td>
                            <td class="px-6 py-4">
                                {{ order.ShipName ?? 'N/A' }}
                            </td>
                            <td class="px-6 py-4">
                                {{ order.ShipCity ?? 'N/A' }}
                            </td>
                            <td class="px-6 py-4">
                                <span class="rounded bg-indigo-100 px-2 py-1 text-xs font-semibold text-indigo-800 dark:bg-indigo-900 dark:text-indigo-300">
                                    {{ order.ShipCountry ?? 'N/A' }}
                                </span>
                            </td>
                            <td class="px-6 py-4">
                                ${{ order.Freight ? order.Freight|number_format(2, '.', ',') : '0.00' }}
                            </td>
                            <td class="px-6 py-4">
                                {% if order.ShippedDate %}
                                    <span class="rounded bg-green-100 px-2 py-1 text-xs font-semibold text-green-800 dark:bg-green-900 dark:text-green-300">
                                        Shipped
                                    </span>
                                {% else %}
                                    <span class="rounded bg-yellow-100 px-2 py-1 text-xs font-semibold text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300">
                                        Pending
                                    </span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4">
                                <a href="{{ path('app_northwind_orders_show', {'id': order.OrderID}) }}" 
                                   class="font-medium text-indigo-600 hover:underline dark:text-indigo-500">
                                    View Details
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="11" class="px-6 py-8 text-center text-gray-500 dark:text-gray-400">
                                No orders found. Try adjusting your filters.
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <!-- Pagination -->
    {% if total_pages > 1 %}
        <div class="mt-6 flex items-center justify-between rounded-lg bg-white p-4 shadow dark:bg-gray-800">
            <div class="text-sm text-gray-700 dark:text-gray-300">
                Showing {{ (current_page - 1) * per_page + 1 }} to {{ min(current_page * per_page, total_count) }} of {{ total_count }} results
            </div>
            
            <nav class="flex items-center gap-2">
                {# Previous Button #}
                {% if current_page > 1 %}
                    <a href="{{ path('app_northwind_orders', {page: current_page - 1, country: filter_country, customer: filter_customer}) }}"
                       class="flex h-10 items-center justify-center rounded-lg border border-gray-300 bg-white px-4 text-sm font-medium text-gray-700 hover:bg-gray-50 dark:border-gray-600 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700">
                        Previous
                    </a>
                {% else %}
                    <span class="flex h-10 items-center justify-center rounded-lg border border-gray-300 bg-gray-100 px-4 text-sm font-medium text-gray-400 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-500">
                        Previous
                    </span>
                {% endif %}

                {# Page Numbers #}
                {% set start_page = max(1, current_page - 2) %}
                {% set end_page = min(total_pages, current_page + 2) %}
                
                {% if start_page > 1 %}
                    <a href="{{ path('app_northwind_orders', {page: 1, country: filter_country, customer: filter_customer}) }}"
                       class="flex h-10 w-10 items-center justify-center rounded-lg border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 dark:border-gray-600 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700">
                        1
                    </a>
                    {% if start_page > 2 %}
                        <span class="text-gray-500">...</span>
                    {% endif %}
                {% endif %}

                {% for page in start_page..end_page %}
                    {% if page == current_page %}
                        <span class="flex h-10 w-10 items-center justify-center rounded-lg border-2 border-indigo-600 bg-indigo-50 text-sm font-medium text-indigo-600 dark:border-indigo-500 dark:bg-indigo-900 dark:text-indigo-300">
                            {{ page }}
                        </span>
                    {% else %}
                        <a href="{{ path('app_northwind_orders', {page: page, country: filter_country, customer: filter_customer}) }}"
                           class="flex h-10 w-10 items-center justify-center rounded-lg border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 dark:border-gray-600 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700">
                            {{ page }}
                        </a>
                    {% endif %}
                {% endfor %}

                {% if end_page < total_pages %}
                    {% if end_page < total_pages - 1 %}
                        <span class="text-gray-500">...</span>
                    {% endif %}
                    <a href="{{ path('app_northwind_orders', {page: total_pages, country: filter_country, customer: filter_customer}) }}"
                       class="flex h-10 w-10 items-center justify-center rounded-lg border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 dark:border-gray-600 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700">
                        {{ total_pages }}
                    </a>
                {% endif %}

                {# Next Button #}
                {% if current_page < total_pages %}
                    <a href="{{ path('app_northwind_orders', {page: current_page + 1, country: filter_country, customer: filter_customer}) }}"
                       class="flex h-10 items-center justify-center rounded-lg border border-gray-300 bg-white px-4 text-sm font-medium text-gray-700 hover:bg-gray-50 dark:border-gray-600 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700">
                        Next
                    </a>
                {% else %}
                    <span class="flex h-10 items-center justify-center rounded-lg border border-gray-300 bg-gray-100 px-4 text-sm font-medium text-gray-400 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-500">
                        Next
                    </span>
                {% endif %}
            </nav>
        </div>
    {% endif %}
</div>
{% endblock %}
