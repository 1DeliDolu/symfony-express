{% extends 'northwind_base.html.twig' %}

{% block page_title %}Orders{% endblock %}

{% block body %}
<style>
[x-cloak] { display: none !important; }
</style>

{% set ordersJson = orders|map(o => {
    OrderID: o.OrderID,
    CustomerID: o.CustomerID,
    CompanyName: o.CompanyName,
    OrderDate: o.OrderDate ? o.OrderDate|date('Y-m-d') : null,
    RequiredDate: o.RequiredDate ? o.RequiredDate|date('Y-m-d') : null,
    ShippedDate: o.ShippedDate ? o.ShippedDate|date('Y-m-d') : null,
    ShipName: o.ShipName,
    ShipCity: o.ShipCity,
    ShipCountry: o.ShipCountry,
    Freight: o.Freight
})|json_encode(constant('JSON_UNESCAPED_UNICODE'))|raw %}

<div x-data="{
  q: '',
  filterCountry: '',
  filterCustomer: '',
  sort: {key: 'OrderDate', dir: 'desc'},
  currentPage: 1,
  perPage: 50,
  rows: {{ ordersJson }},
  get filtered() {
    let r = this.rows.filter(x => {
      let searchStr = [x.OrderID, x.CustomerID, x.CompanyName, x.ShipName||'', x.ShipCity||'', x.ShipCountry||''].join(' ').toLowerCase();
      let matchSearch = searchStr.includes(this.q.toLowerCase());
      let matchCountry = !this.filterCountry || x.ShipCountry === this.filterCountry;
      let matchCustomer = !this.filterCustomer || x.CustomerID.toLowerCase().includes(this.filterCustomer.toLowerCase());
      return matchSearch && matchCountry && matchCustomer;
    });
    r.sort((a,b) => {
      const k = this.sort.key, d = this.sort.dir === 'asc' ? 1 : -1;
      let aVal = a[k] || '';
      let bVal = b[k] || '';
      return (aVal > bVal ? 1 : aVal < bVal ? -1 : 0) * d;
    });
    return r;
  },
  get paged() {
    const start = (this.currentPage - 1) * this.perPage;
    return this.filtered.slice(start, start + this.perPage);
  },
  get totalPages() {
    return Math.ceil(this.filtered.length / this.perPage);
  },
  setSort(k) {
    this.sort.dir = (this.sort.key === k && this.sort.dir === 'asc') ? 'desc' : 'asc';
    this.sort.key = k;
    this.currentPage = 1;
  },
  resetFilters() {
    this.q = '';
    this.filterCountry = '';
    this.filterCustomer = '';
    this.currentPage = 1;
  }
}" class="container mx-auto px-4 py-6">

    <!-- Header -->
    <div class="mb-6">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Orders</h1>
          <p class="mt-1 text-sm text-gray-600 dark:text-gray-400" x-text="'Showing ' + paged.length + ' of ' + filtered.length + ' orders'"></p>
        </div>
      </div>
    </div>

    <!-- Filters -->
  <div class="flex items-center gap-3">
        <input x-model="q" type="text" placeholder="Search orders..."
                class="flex-1 rounded-lg border border-gray-300 px-4 py-2.5 text-sm focus:border-indigo-500 focus:ring-indigo-500 dark:border-gray-600 dark:bg-gray-800 dark:text-white"/>
        <span class="text-sm text-gray-600 dark:text-gray-400 whitespace-nowrap" x-text="filtered.length + ' Orders'"></span>
    </div>
    <br />

    <!-- Orders Table -->
    <div class="overflow-hidden rounded-lg bg-white shadow dark:bg-gray-800">
      <div class="overflow-x-auto">
        <table class="w-full text-left text-sm text-gray-500 dark:text-gray-400">
          <thead class="bg-gray-50 text-xs uppercase text-gray-700 dark:bg-gray-700 dark:text-gray-400">
            <tr>
              <th class="px-6 py-3">
                <button @click="setSort('OrderID')" class="font-semibold hover:underline">
                  Order ID <span x-show="sort.key==='OrderID'" x-text="'(' + sort.dir + ')'"></span>
                </button>
              </th>
              <th class="px-6 py-3">
                <button @click="setSort('CustomerID')" class="font-semibold hover:underline">
                  Customer ID <span x-show="sort.key==='CustomerID'" x-text="'(' + sort.dir + ')'"></span>
                </button>
              </th>
              <th class="px-6 py-3">
                <button @click="setSort('CompanyName')" class="font-semibold hover:underline">
                  Company <span x-show="sort.key==='CompanyName'" x-text="'(' + sort.dir + ')'"></span>
                </button>
              </th>
              <th class="px-6 py-3">
                <button @click="setSort('OrderDate')" class="font-semibold hover:underline">
                  Order Date <span x-show="sort.key==='OrderDate'" x-text="'(' + sort.dir + ')'"></span>
                </button>
              </th>
              <th class="px-6 py-3">Ship City</th>
              <th class="px-6 py-3">
                <button @click="setSort('ShipCountry')" class="font-semibold hover:underline">
                  Country <span x-show="sort.key==='ShipCountry'" x-text="'(' + sort.dir + ')'"></span>
                </button>
              </th>
              <th class="px-6 py-3">
                <button @click="setSort('Freight')" class="font-semibold hover:underline">
                  Freight <span x-show="sort.key==='Freight'" x-text="'(' + sort.dir + ')'"></span>
                </button>
              </th>
              <th class="px-6 py-3">Status</th>
              <th class="px-6 py-3">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-100 dark:divide-gray-800">
            <template x-for="order in paged" :key="order.OrderID">
              <tr class="odd:bg-white even:bg-gray-50 hover:bg-indigo-50/50 dark:odd:bg-gray-900 dark:even:bg-gray-800 dark:hover:bg-indigo-900/20">
                <td class="px-6 py-4 font-medium text-gray-900 dark:text-white" x-text="order.OrderID"></td>
                <td class="px-6 py-4" x-text="order.CustomerID"></td>
                <td class="px-6 py-4" x-text="order.CompanyName"></td>
                <td class="px-6 py-4" x-text="order.OrderDate || 'N/A'"></td>
                <td class="px-6 py-4" x-text="order.ShipCity || 'N/A'"></td>
                <td class="px-6 py-4">
                  <span class="rounded bg-indigo-100 px-2 py-1 text-xs font-semibold text-indigo-800 dark:bg-indigo-900 dark:text-indigo-300" 
                        x-text="order.ShipCountry || 'N/A'"></span>
                </td>
                <td class="px-6 py-4" x-text="'$' + (order.Freight ? parseFloat(order.Freight).toFixed(2) : '0.00')"></td>
                <td class="px-6 py-4">
                  <span x-show="order.ShippedDate" class="rounded bg-green-100 px-2 py-1 text-xs font-semibold text-green-800 dark:bg-green-900 dark:text-green-300">
                    Shipped
                  </span>
                  <span x-show="!order.ShippedDate" class="rounded bg-yellow-100 px-2 py-1 text-xs font-semibold text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300">
                    Pending
                  </span>
                </td>
                <td class="px-6 py-4">
                  <a :href="`{{ path('app_northwind_orders_show', {'id': '__ID__'}) }}`.replace('__ID__', order.OrderID)"
                     class="rounded-lg bg-indigo-600 px-3 py-1.5 text-xs text-white hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-600">
                    View
                  </a>
                </td>
              </tr>
            </template>
            <tr x-show="filtered.length === 0" x-cloak>
              <td colspan="9" class="px-6 py-12 text-center">
                <p class="text-gray-600 dark:text-gray-400">No orders found</p>
                <button @click="resetFilters()" class="mt-2 text-sm font-medium text-indigo-600 hover:underline dark:text-indigo-400">
                  Reset filters
                </button>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Pagination -->
    <div x-show="totalPages > 1" class="mt-6 flex items-center justify-between rounded-lg bg-white p-4 shadow dark:bg-gray-800">
      <div class="text-sm text-gray-700 dark:text-gray-300">
        <span x-text="'Page ' + currentPage + ' of ' + totalPages"></span>
      </div>
      
      <nav class="flex items-center gap-2">
        <button @click="currentPage = Math.max(1, currentPage - 1)" :disabled="currentPage === 1"
                :class="currentPage === 1 ? 'bg-gray-100 text-gray-400 dark:bg-gray-700 dark:text-gray-500' : 'bg-white text-gray-700 hover:bg-gray-50 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700'"
                class="flex h-10 items-center justify-center rounded-lg border border-gray-300 px-4 text-sm font-medium dark:border-gray-600">
          Previous
        </button>

        <template x-for="page in Array.from({length: Math.min(5, totalPages)}, (_, i) => i + Math.max(1, currentPage - 2))" :key="page">
          <button x-show="page <= totalPages" @click="currentPage = page"
                  :class="page === currentPage ? 'border-2 border-indigo-600 bg-indigo-50 text-indigo-600 dark:border-indigo-500 dark:bg-indigo-900 dark:text-indigo-300' : 'border border-gray-300 bg-white text-gray-700 hover:bg-gray-50 dark:border-gray-600 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700'"
                  class="flex h-10 w-10 items-center justify-center rounded-lg text-sm font-medium"
                  x-text="page"></button>
        </template>

        <button @click="currentPage = Math.min(totalPages, currentPage + 1)" :disabled="currentPage === totalPages"
                :class="currentPage === totalPages ? 'bg-gray-100 text-gray-400 dark:bg-gray-700 dark:text-gray-500' : 'bg-white text-gray-700 hover:bg-gray-50 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700'"
                class="flex h-10 items-center justify-center rounded-lg border border-gray-300 px-4 text-sm font-medium dark:border-gray-600">
          Next
        </button>
      </nav>
    </div>

</div>
{% endblock %}
