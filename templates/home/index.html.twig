{% extends 'base.html.twig' %}

{% block title %}Ana Sayfa{% endblock %}

{% block body %}
<!-- Hero Section -->
<section class="bg-gradient-to-br from-blue-600 via-purple-600 to-indigo-700 text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
            <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
                Pehli<span class="text-blue-600 dark:text-orange-400">ONE</span>
            </h1>
            <p class="text-xl sm:text-2xl mb-8 text-blue-100 max-w-3xl mx-auto">
                Eine umfassende Lösung für modernes Verlagsmanagement. Verwalten Sie Ihre Bücher, Autoren und Verkäufe an einem zentralen Ort.
            </p>
            <div class="flex flex-wrap justify-center gap-4">
                {% if app.user %}
                    <a href="{{ path('app_dashboard') }}" class="px-8 py-4 bg-white text-blue-600 rounded-lg font-semibold text-lg hover:bg-gray-100 transition-all shadow-lg hover:shadow-xl transform hover:-translate-y-0.5">
                        Zum Dashboard
                    </a>
                    <a href="{{ path('app_title_index') }}" class="px-8 py-4 bg-blue-500/30 backdrop-blur-sm border-2 border-white/50 text-white rounded-lg font-semibold text-lg hover:bg-blue-500/40 transition-all">
                        Bücher anzeigen
                    </a>
                {% else %}
                    <a href="{{ path('app_login') }}" class="px-8 py-4 bg-white text-blue-600 rounded-lg font-semibold text-lg hover:bg-gray-100 transition-all shadow-lg hover:shadow-xl transform hover:-translate-y-0.5">
                       Anmelden
                    </a>
                    <a href="{{ path('app_register') }}" class="px-8 py-4 bg-blue-500/30 backdrop-blur-sm border-2 border-white/50 text-white rounded-lg font-semibold text-lg hover:bg-blue-500/40 transition-all">
                       Registrieren
                    </a>
                {% endif %}
            </div>
        </div>
    </div>
</section>

<!-- Statistics Section -->
<section class="py-12 bg-white dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-4">
                Unsere Plattform in Zahlen
            </h2>
            <p class="text-lg text-gray-600 dark:text-gray-400">
                Was gibt es in unserer umfangreichen Datenbank?
            </p>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
            <!-- Total Titles -->
            <div class="bg-gradient-to-br from-blue-50 to-indigo-100 dark:from-blue-900/20 dark:to-indigo-900/20 rounded-2xl p-6 border border-blue-200 dark:border-blue-800 transform hover:scale-105 transition-all">
                <div class="flex items-center justify-between mb-4">
                    <div class="p-3 bg-blue-600 rounded-xl">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                        </svg>
                    </div>
                </div>
                <h3 class="text-4xl font-bold text-gray-900 dark:text-white mb-2">{{ totalTitles }}</h3>
                <p class="text-gray-600 dark:text-gray-400 font-medium">Gesamtanzahl Titel</p>
                <a href="{{ path('app_title_index') }}" class="mt-4 inline-flex items-center text-blue-600 dark:text-blue-400 font-medium hover:underline">
                    Alle anzeigen
                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                </a>
            </div>

            <!-- Total Authors -->
            <div class="bg-gradient-to-br from-green-50 to-emerald-100 dark:from-green-900/20 dark:to-emerald-900/20 rounded-2xl p-6 border border-green-200 dark:border-green-800 transform hover:scale-105 transition-all">
                <div class="flex items-center justify-between mb-4">
                    <div class="p-3 bg-green-600 rounded-xl">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                        </svg>
                    </div>
                </div>
                <h3 class="text-4xl font-bold text-gray-900 dark:text-white mb-2">{{ totalAuthors }}</h3>
                <p class="text-gray-600 dark:text-gray-400 font-medium">Gesamtanzahl Autoren</p>
                <a href="{{ path('app_author_index') }}" class="mt-4 inline-flex items-center text-green-600 dark:text-green-400 font-medium hover:underline">
                    Alle anzeigen
                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                </a>
            </div>

            <!-- Total Publishers -->
            <div class="bg-gradient-to-br from-purple-50 to-violet-100 dark:from-purple-900/20 dark:to-violet-900/20 rounded-2xl p-6 border border-purple-200 dark:border-purple-800 transform hover:scale-105 transition-all">
                <div class="flex items-center justify-between mb-4">
                    <div class="p-3 bg-purple-600 rounded-xl">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                        </svg>
                    </div>
                </div>
                <h3 class="text-4xl font-bold text-gray-900 dark:text-white mb-2">{{ totalPublishers }}</h3>
                <p class="text-gray-600 dark:text-gray-400 font-medium">Gesamtanzahl Verlage</p>
                <a href="{{ path('app_publisher_index') }}" class="mt-4 inline-flex items-center text-purple-600 dark:text-purple-400 font-medium hover:underline">
                    Alle anzeigen
                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                </a>
            </div>

            <!-- Total Stores -->
            <div class="bg-gradient-to-br from-orange-50 to-amber-100 dark:from-orange-900/20 dark:to-amber-900/20 rounded-2xl p-6 border border-orange-200 dark:border-orange-800 transform hover:scale-105 transition-all">
                <div class="flex items-center justify-between mb-4">
                    <div class="p-3 bg-orange-600 rounded-xl">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
                        </svg>
                    </div>
                </div>
                <h3 class="text-4xl font-bold text-gray-900 dark:text-white mb-2">{{ totalStores }}</h3>
                <p class="text-gray-600 dark:text-gray-400 font-medium">Gesamtanzahl Filialen</p>
                <a href="{{ path('app_store_index') }}" class="mt-4 inline-flex items-center text-orange-600 dark:text-orange-400 font-medium hover:underline">
                    Alle anzeigen
                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Neueste Titel Sektion -->
<section class="py-16 bg-gray-50 dark:bg-gray-950">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center mb-8">
            <div>
                <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">Neu hinzugefügte Bücher</h2>
                <p class="text-gray-600 dark:text-gray-400">Unsere neuesten Veröffentlichungen</p>
            </div>
            <a href="{{ path('app_title_index') }}" class="px-6 py-3 bg-blue-600 text-white rounded-lg font-medium hover:bg-blue-700 transition-colors">
                Alle anzeigen
            </a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for title in recentTitles %}
                <div class="bg-white dark:bg-gray-900 rounded-xl shadow-sm hover:shadow-lg transition-all border border-gray-200 dark:border-gray-800 overflow-hidden group">
                    <div class="p-6">
                        <div class="flex items-start justify-between mb-4">
                            <div class="flex-1">
                                <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                                    {{ title.title }}
                                </h3>
                                <span class="inline-block px-3 py-1 text-xs font-medium rounded-full bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-400">
                                    {{ title.type }}
                                </span>
                            </div>
                            {% if title.price %}
                                <span class="text-2xl font-bold text-blue-600 dark:text-blue-400">
                                    ${{ title.price }}
                                </span>
                            {% endif %}
                        </div>

                        <div class="space-y-2 mb-4">
                            {% if title.publisher %}
                                <div class="flex items-center text-sm text-gray-600 dark:text-gray-400">
                                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                                    </svg>
                                    {{ title.publisher.pubName }}
                                </div>
                            {% endif %}
                            <div class="flex items-center text-sm text-gray-600 dark:text-gray-400">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                </svg>
                                {{ title.pubdate|date('d.m.Y') }}
                            </div>
                        </div>

                        <a href="{{ path('app_title_show', {'titleId': title.titleId}) }}" class="block w-full text-center px-4 py-2 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 rounded-lg font-medium hover:bg-blue-600 hover:text-white dark:hover:bg-blue-600 transition-all">
                            Details ansehen
                        </a>
                    </div>
                </div>
            {% else %}
                <div class="col-span-3 text-center py-12">
                    <p class="text-gray-600 dark:text-gray-400">Noch keine Bücher hinzugefügt.</p>
                </div>
            {% endfor %}
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="py-16 bg-white dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-4">
                Warum Pehli<span class="text-blue-600 dark:text-orange-400">ONE</span>?
            </h2>
            <p class="text-lg text-gray-600 dark:text-gray-400 max-w-3xl mx-auto">
                Alles, was Sie für modernes Verlagsmanagement brauchen
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="text-center">
                <div class="inline-flex items-center justify-center w-16 h-16 bg-blue-100 dark:bg-blue-900/30 rounded-2xl mb-4">
                    <svg class="w-8 h-8 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                    </svg>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Schnell und effizient</h3>
                <p class="text-gray-600 dark:text-gray-400">Leistungsstarke Verwaltung mit moderner Technologie</p>
            </div>

            <div class="text-center">
                <div class="inline-flex items-center justify-center w-16 h-16 bg-green-100 dark:bg-green-900/30 rounded-2xl mb-4">
                    <svg class="w-8 h-8 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                    </svg>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Sicher</h3>
                <p class="text-gray-600 dark:text-gray-400">Ihre Daten werden verschlüsselt und sicher gespeichert</p>
            </div>

            <div class="text-center">
                <div class="inline-flex items-center justify-center w-16 h-16 bg-purple-100 dark:bg-purple-900/30 rounded-2xl mb-4">
                    <svg class="w-8 h-8 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"/>
                    </svg>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Einfache Bedienung</h3>
                <p class="text-gray-600 dark:text-gray-400">Intuitive Oberfläche — schnell einsteigen und Ihre Arbeit verwalten</p>
            </div>
        </div>
    </div>
</section>
{% endblock %}
