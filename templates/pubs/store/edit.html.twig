{% extends 'admin_base.html.twig' %}

{% block title %}Mağaza Düzenle{% endblock %}
{% block page_title %}Mağaza Düzenle{% endblock %}

{% block body %}
<!-- Header with Navigation -->
<div class="mb-6 flex items-center justify-between">
    <a href="{{ path('app_store_show', {'storId': store.storId}) }}" 
       class="inline-flex items-center gap-2 rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm font-semibold text-gray-700 shadow-sm transition hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700">
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Geri Dön
    </a>
    
    <form method="post" action="{{ path('app_store_delete', {'storId': store.storId}) }}" 
          onsubmit="return confirm('Bu mağazayı silmek istediğinizden emin misiniz?');"
          class="inline">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ store.storId) }}">
        <button type="submit" 
                class="inline-flex items-center gap-2 rounded-lg bg-red-600 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-red-700 dark:bg-red-500 dark:hover:bg-red-600">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
            </svg>
            Mağazayı Sil
        </button>
    </form>
</div>

<!-- Form Card -->
<div class="rounded-lg border border-gray-200 bg-white shadow-sm dark:border-gray-800 dark:bg-gray-900">
    <!-- Card Header -->
    <div class="border-b border-gray-200 px-6 py-4 dark:border-gray-800">
        <div class="flex items-center gap-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-full bg-blue-100 dark:bg-blue-900/20">
                <svg class="h-6 w-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                </svg>
            </div>
            <div>
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
                    {{ store.storName|default('Mağaza') }} - Düzenle
                </h3>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                    Mağaza bilgilerini güncelleyin
                </p>
            </div>
        </div>
    </div>

    <!-- Form Content -->
    <div class="p-6">
        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
            <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
                <!-- Mağaza ID - Read Only -->
                <div class="md:col-span-2">
                    <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">
                        Mağaza ID
                    </label>
                    <div class="rounded-lg border border-gray-300 bg-gray-50 px-4 py-3 font-mono text-sm font-semibold text-gray-500 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-400">
                        {{ store.storId }}
                    </div>
                    <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                        Mağaza ID değiştirilemez
                    </p>
                </div>

                <!-- Mağaza Adı -->
                <div class="md:col-span-2">
                    {{ form_row(form.storName, {
                        'label': 'Mağaza Adı',
                        'attr': {
                            'class': 'mt-1 block w-full rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm text-gray-900 focus:border-blue-500 focus:ring-2 focus:ring-blue-500 dark:border-gray-700 dark:bg-gray-800 dark:text-white dark:focus:border-blue-500',
                            'placeholder': 'Mağaza adını girin'
                        },
                        'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300'}
                    }) }}
                </div>

                <!-- Adres -->
                <div class="md:col-span-2">
                    {{ form_row(form.storAddress, {
                        'label': 'Adres',
                        'attr': {
                            'class': 'mt-1 block w-full rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm text-gray-900 focus:border-blue-500 focus:ring-2 focus:ring-blue-500 dark:border-gray-700 dark:bg-gray-800 dark:text-white dark:focus:border-blue-500',
                            'placeholder': 'Mağaza adresini girin'
                        },
                        'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300'}
                    }) }}
                </div>

                <!-- Şehir -->
                <div>
                    {{ form_row(form.city, {
                        'label': 'Şehir',
                        'attr': {
                            'class': 'mt-1 block w-full rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm text-gray-900 focus:border-blue-500 focus:ring-2 focus:ring-blue-500 dark:border-gray-700 dark:bg-gray-800 dark:text-white dark:focus:border-blue-500',
                            'placeholder': 'Şehir adını girin'
                        },
                        'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300'}
                    }) }}
                </div>

                <!-- Eyalet -->
                <div>
                    {{ form_row(form.state, {
                        'label': 'Eyalet',
                        'attr': {
                            'class': 'mt-1 block w-full rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm text-gray-900 focus:border-blue-500 focus:ring-2 focus:ring-blue-500 dark:border-gray-700 dark:bg-gray-800 dark:text-white dark:focus:border-blue-500',
                            'placeholder': 'Eyalet kodu (örn: CA, TX)',
                            'maxlength': '2'
                        },
                        'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300'}
                    }) }}
                </div>

                <!-- Posta Kodu -->
                <div class="md:col-span-2">
                    {{ form_row(form.zip, {
                        'label': 'Posta Kodu',
                        'attr': {
                            'class': 'mt-1 block w-full rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm text-gray-900 focus:border-blue-500 focus:ring-2 focus:ring-blue-500 dark:border-gray-700 dark:bg-gray-800 dark:text-white dark:focus:border-blue-500',
                            'placeholder': 'Posta kodunu girin'
                        },
                        'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300'}
                    }) }}
                </div>
            </div>

            <!-- Form Actions -->
            <div class="flex items-center justify-end gap-3 border-t border-gray-200 pt-6 dark:border-gray-800">
                <a href="{{ path('app_store_show', {'storId': store.storId}) }}" 
                   class="rounded-lg border border-gray-300 bg-white px-4 py-2.5 text-sm font-semibold text-gray-700 shadow-sm transition hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700">
                    İptal
                </a>
                <button type="submit" 
                        class="inline-flex items-center gap-2 rounded-lg bg-blue-600 px-4 py-2.5 text-sm font-semibold text-white shadow-sm transition hover:bg-blue-700 dark:bg-blue-500 dark:hover:bg-blue-600">
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                    Değişiklikleri Kaydet
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>

<!-- Help Card -->
<div class="mt-6 rounded-lg border border-blue-200 bg-blue-50 p-4 dark:border-blue-900/50 dark:bg-blue-900/10">
    <div class="flex gap-3">
        <svg class="h-5 w-5 flex-shrink-0 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <div class="text-sm text-blue-800 dark:text-blue-300">
            <p class="font-semibold">Bilgi:</p>
            <ul class="mt-2 list-inside list-disc space-y-1">
                <li>Mağaza ID değiştirilemez</li>
                <li>Eyalet kodu 2 karakter olmalıdır (örn: CA, TX, NY)</li>
                <li>Tüm zorunlu alanları doldurunuz</li>
            </ul>
        </div>
    </div>
</div>
{% endblock %}
