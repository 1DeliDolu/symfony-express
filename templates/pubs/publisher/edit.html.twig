{% extends 'pubs_base.html.twig' %}

{% block title %}Verlag bearbeiten{% endblock %}
{% block page_title %}Verlag bearbeiten{% endblock %}

{% block body %}
<!-- Header with Action Buttons -->
<div class="mb-6 flex items-center justify-between">
    <a href="{{ path('app_publisher_show', {'pubId': publisher.pubId}) }}" 
       class="inline-flex items-center gap-2 rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm font-semibold text-gray-700 shadow-sm transition hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700">
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Zurück zur Detailansicht
    </a>
    
    <form method="post" action="{{ path('app_publisher_delete', {'pubId': publisher.pubId}) }}" 
          onsubmit="return confirm('Sind Sie sicher, dass Sie diesen Verlag löschen möchten?');"
          class="inline">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ publisher.pubId) }}">
        <button type="submit" 
                class="inline-flex items-center gap-2 rounded-lg bg-red-600 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-red-700 dark:bg-red-500 dark:hover:bg-red-600">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
            </svg>
            Löschen
        </button>
    </form>
</div>

<div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
    <!-- Main Form Card -->
    <div class="lg:col-span-2">
        <div class="rounded-lg border border-gray-200 bg-white shadow-sm dark:border-gray-800 dark:bg-gray-900">
            <!-- Header -->
            <div class="border-b border-gray-200 px-6 py-4 dark:border-gray-800">
                <div class="flex items-center gap-4">
                    <div class="flex h-12 w-12 items-center justify-center rounded-full bg-purple-100 dark:bg-purple-900/20">
                        <svg class="h-6 w-6 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Verlagsinformationen</h3>
                        <p class="text-sm text-gray-600 dark:text-gray-400">Bearbeiten Sie die Verlagsinformationen</p>
                    </div>
                </div>
            </div>

            <!-- Form Content -->
            <div class="p-6">
                {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                
                <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
                    <!-- Yayıncı ID (Read-only) -->
                    <div class="md:col-span-2">
                        <label class="mb-2 block text-sm font-semibold text-gray-700 dark:text-gray-300">
                            Verlags-ID
                        </label>
                        <div class="flex items-center gap-2 rounded-lg border border-gray-200 bg-gray-50 px-4 py-3 dark:border-gray-700 dark:bg-gray-800">
                            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                            </svg>
                            <span class="font-mono text-sm font-semibold text-gray-900 dark:text-white">
                                {{ publisher.pubId }}
                            </span>
                            <span class="ml-auto text-xs text-gray-500 dark:text-gray-400">Nicht änderbar</span>
                        </div>
                    </div>

                    <!-- Yayıncı Adı -->
                    <div class="md:col-span-2">
                        <label class="mb-2 block text-sm font-semibold text-gray-700 dark:text-gray-300">
                            Verlagsname
                            <span class="text-red-500">*</span>
                        </label>
                        {{ form_widget(form.pubName, {
                            'attr': {
                                'class': 'w-full rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm text-gray-900 shadow-sm transition focus:border-purple-500 focus:outline-none focus:ring-2 focus:ring-purple-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white dark:focus:border-purple-400',
                                'placeholder': 'Verlagsnamen eingeben'
                            }
                        }) }}
                        <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">Vollständiger Name des Verlags</p>
                    </div>

                    <!-- Şehir -->
                    <div>
                        <label class="mb-2 block text-sm font-semibold text-gray-700 dark:text-gray-300">
                            Stadt
                        </label>
                        {{ form_widget(form.city, {
                            'attr': {
                                'class': 'w-full rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm text-gray-900 shadow-sm transition focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white dark:focus:border-blue-400',
                                'placeholder': 'Stadt'
                            }
                        }) }}
                    </div>

                    <!-- Eyalet -->
                    <div>
                        <label class="mb-2 block text-sm font-semibold text-gray-700 dark:text-gray-300">
                            Bundesstaat
                        </label>
                        {{ form_widget(form.state, {
                            'attr': {
                                'class': 'w-full rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm text-gray-900 shadow-sm transition focus:border-green-500 focus:outline-none focus:ring-2 focus:ring-green-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white dark:focus:border-green-400',
                                'placeholder': 'Bundesstaat-Kürzel (z.B. CA)',
                                'maxlength': '2'
                            }
                        }) }}
                        <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">2-stelliges Bundesstaat-Kürzel</p>
                    </div>

                    <!-- Ülke -->
                    <div class="md:col-span-2">
                        <label class="mb-2 block text-sm font-semibold text-gray-700 dark:text-gray-300">
                            Land
                        </label>
                        {{ form_widget(form.country, {
                            'attr': {
                                'class': 'w-full rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm text-gray-900 shadow-sm transition focus:border-purple-500 focus:outline-none focus:ring-2 focus:ring-purple-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white dark:focus:border-purple-400',
                                'placeholder': 'Land'
                            }
                        }) }}
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex items-center justify-end gap-3 border-t border-gray-200 pt-6 dark:border-gray-800">
                    <a href="{{ path('app_publisher_show', {'pubId': publisher.pubId}) }}" 
                       class="rounded-lg border border-gray-300 bg-white px-6 py-3 text-sm font-semibold text-gray-700 shadow-sm transition hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700">
                        Abbrechen
                    </a>
                    <button type="submit" 
                            class="inline-flex items-center gap-2 rounded-lg bg-purple-600 px-6 py-3 text-sm font-semibold text-white shadow-sm transition hover:bg-purple-700 dark:bg-purple-500 dark:hover:bg-purple-600">
                        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                        </svg>
                        Änderungen speichern
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>

    <!-- Help Card -->
    <div class="lg:col-span-1">
        <div class="rounded-lg border border-gray-200 bg-white shadow-sm dark:border-gray-800 dark:bg-gray-900">
            <div class="border-b border-gray-200 px-6 py-4 dark:border-gray-800">
                <div class="flex items-center gap-3">
                    <svg class="h-6 w-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Hilfe</h3>
                </div>
            </div>
            <div class="p-6">
                <div class="space-y-4 text-sm text-gray-600 dark:text-gray-400">
                    <div>
                        <h4 class="mb-1 font-semibold text-gray-900 dark:text-white">Pflichtfelder</h4>
                        <ul class="ml-4 list-disc space-y-1">
                            <li>Verlagsname: Mindestens 2 Zeichen</li>
                        </ul>
                    </div>
                    
                    <div>
                        <h4 class="mb-1 font-semibold text-gray-900 dark:text-white">Feldregeln</h4>
                        <ul class="ml-4 list-disc space-y-1">
                            <li><strong>Verlags-ID:</strong> Nicht änderbar, automatisch</li>
                            <li><strong>Bundesstaat:</strong> 2-stelliges Kürzel (z.B. CA, NY, TX)</li>
                            <li><strong>Land:</strong> Vollständiger Ländername (z.B. USA)</li>
                        </ul>
                    </div>
                    
                    <div>
                        <h4 class="mb-1 font-semibold text-gray-900 dark:text-white">Tipps</h4>
                        <ul class="ml-4 list-disc space-y-1">
                            <li>Alle Felder sind groß-/kleinschreibungsempfindlich</li>
                            <li>Stadt- und Bundesstaat-Angaben sind optional</li>
                            <li>Wenn kein Land angegeben wird, wird ein Standardwert verwendet</li>
                        </ul>
                    </div>

                    <div class="rounded-lg bg-blue-50 p-4 dark:bg-blue-900/20">
                        <p class="text-xs text-blue-800 dark:text-blue-300">
                            <strong>Hinweis:</strong> Um einen Verlag zu löschen, verwenden Sie die "Löschen"-Schaltfläche auf der Detailseite.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
