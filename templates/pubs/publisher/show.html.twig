{% extends 'pubs_base.html.twig' %}

{% block title %}Verlagsdetails{% endblock %}
{% block page_title %}Verlagsdetails{% endblock %}

{% block body %}
<!-- Header with Action Buttons -->
<div class="mb-6 flex items-center justify-between">
    <a href="{{ path('app_publisher_index') }}" 
       class="inline-flex items-center gap-2 rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm font-semibold text-gray-700 shadow-sm transition hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700">
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Zur Liste
    </a>
    
    <div class="flex items-center gap-2">
        <a href="{{ path('app_publisher_edit', {'pubId': publisher.pubId}) }}" 
           class="inline-flex items-center gap-2 rounded-lg bg-green-600 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-green-700 dark:bg-green-500 dark:hover:bg-green-600">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
            Bearbeiten
        </a>
        
        <form method="post" action="{{ path('app_publisher_delete', {'pubId': publisher.pubId}) }}" 
              onsubmit="return confirm('Sind Sie sicher, dass Sie diesen Verlag löschen möchten?');"
              class="inline">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ publisher.pubId) }}">
            <button type="submit" 
                    class="inline-flex items-center gap-2 rounded-lg bg-red-600 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-red-700 dark:bg-red-500 dark:hover:bg-red-600">
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                </svg>
                Löschen
            </button>
        </form>
    </div>
</div>

<!-- Publisher Info Card -->
<div class="rounded-lg border border-gray-200 bg-white shadow-sm dark:border-gray-800 dark:bg-gray-900">
    <!-- Header -->
    <div class="border-b border-gray-200 px-6 py-4 dark:border-gray-800">
        <div class="flex items-center gap-4">
            <div class="flex h-16 w-16 items-center justify-center rounded-full bg-purple-100 dark:bg-purple-900/20">
                <svg class="h-8 w-8 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                </svg>
            </div>
            <div>
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
                    {{ publisher.pubName|default('N/A') }}
                </h3>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                    Verlags-ID: {{ publisher.pubId }}
                </p>
            </div>
        </div>
    </div>

    <!-- Details Grid -->
    <div class="p-6">
        <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
            <!-- Verlags-ID -->
            <div>
                <label class="mb-1 block text-xs font-medium uppercase text-gray-500 dark:text-gray-400">
                    Verlags-ID
                </label>
                <div class="rounded-lg bg-gray-50 px-4 py-3 font-mono text-sm font-semibold text-gray-900 dark:bg-gray-800 dark:text-white">
                    {{ publisher.pubId }}
                </div>
            </div>

            <!-- Verlagsname -->
            <div>
                <label class="mb-1 block text-xs font-medium uppercase text-gray-500 dark:text-gray-400">
                    Verlagsname
                </label>
                <div class="rounded-lg bg-gray-50 px-4 py-3 text-sm text-gray-900 dark:bg-gray-800 dark:text-white">
                    {{ publisher.pubName|default('-') }}
                </div>
            </div>

            <!-- Stadt -->
            <div>
                <label class="mb-1 block text-xs font-medium uppercase text-gray-500 dark:text-gray-400">
                    Stadt
                </label>
                <div class="rounded-lg bg-gray-50 px-4 py-3 dark:bg-gray-800">
                    <span class="inline-flex items-center rounded-full bg-blue-100 px-3 py-1 text-sm font-medium text-blue-800 dark:bg-blue-900/20 dark:text-blue-400">
                        {{ publisher.city|default('-') }}
                    </span>
                </div>
            </div>

            <!-- Bundesland -->
            <div>
                <label class="mb-1 block text-xs font-medium uppercase text-gray-500 dark:text-gray-400">
                    Bundesland
                </label>
                <div class="rounded-lg bg-gray-50 px-4 py-3 dark:bg-gray-800">
                    <span class="inline-flex items-center rounded-full bg-green-100 px-3 py-1 text-sm font-medium text-green-800 dark:bg-green-900/20 dark:text-green-400">
                        {{ publisher.state|default('-') }}
                    </span>
                </div>
            </div>

            <!-- Land -->
            <div class="md:col-span-2">
                <label class="mb-1 block text-xs font-medium uppercase text-gray-500 dark:text-gray-400">
                    Land
                </label>
                <div class="rounded-lg bg-gray-50 px-4 py-3 dark:bg-gray-800">
                    <div class="flex items-center gap-2">
                        <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        <span class="inline-flex items-center rounded-full bg-purple-100 px-3 py-1 text-sm font-medium text-purple-800 dark:bg-purple-900/20 dark:text-purple-400">
                            {{ publisher.country|default('USA') }}
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Location Summary Cards -->
<div class="mt-6 grid grid-cols-1 gap-6 sm:grid-cols-3">
    <div class="rounded-lg border border-gray-200 bg-white p-6 shadow-sm dark:border-gray-800 dark:bg-gray-900">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Stadt</p>
                <p class="mt-2 text-2xl font-bold text-gray-900 dark:text-white">
                    {{ publisher.city|default('-') }}
                </p>
            </div>
            <div class="rounded-full bg-blue-100 p-3 dark:bg-blue-900/20">
                <svg class="h-6 w-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                </svg>
            </div>
        </div>
    </div>

    <div class="rounded-lg border border-gray-200 bg-white p-6 shadow-sm dark:border-gray-800 dark:bg-gray-900">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Bundesland</p>
                <p class="mt-2 text-2xl font-bold text-gray-900 dark:text-white">
                    {{ publisher.state|default('-') }}
                </p>
            </div>
            <div class="rounded-full bg-green-100 p-3 dark:bg-green-900/20">
                <svg class="h-6 w-6 text.green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"/>
                </svg>
            </div>
        </div>
    </div>

    <div class="rounded-lg border border-gray-200 bg-white p-6 shadow-sm dark:border-gray-800 dark:bg-gray-900">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Land</p>
                <p class="mt-2 text-2xl font-bold text-gray-900 dark:text-white">
                    {{ publisher.country|default('USA') }}
                </p>
            </div>
            <div class="rounded-full bg-purple-100 p-3 dark:bg-purple-900/20">
                <svg class="h-6 w-6 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
            </div>
        </div>
    </div>
</div>
{% endblock %}
