{% extends 'admin_base.html.twig' %}

{% block title %}Rabatt bearbeiten{% endblock %}
{% block page_title %}Rabatt bearbeiten{% endblock %}

{% block body %}
<!-- Header with Navigation -->
<div class="mb-6 flex items-center justify-between">
    <a href="{{ path('app_discount_show', {'discountType': discount.discountType}) }}" 
       class="inline-flex items-center gap-2 rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm font-semibold text-gray-700 shadow-sm transition hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700">
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Zurück
    </a>
    
    <form method="post" action="{{ path('app_discount_delete', {'discountType': discount.discountType}) }}" 
          onsubmit="return confirm('Möchten Sie diesen Rabatt wirklich löschen?');"
          class="inline">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ discount.discountType) }}">
        <button type="submit" 
                class="inline-flex items-center gap-2 rounded-lg bg-red-600 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-red-700 dark:bg-red-500 dark:hover:bg-red-600">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
            </svg>
            Rabatt löschen
        </button>
    </form>
</div>

<!-- Form Card -->
<div class="rounded-lg border border-gray-200 bg-white shadow-sm dark:border-gray-800 dark:bg-gray-900">
    <!-- Card Header -->
    <div class="border-b border-gray-200 px-6 py-4 dark:border-gray-800">
        <div class="flex items-center gap-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-full bg-blue-100 dark:bg-blue-900/20">
                <svg class="h-6 w-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
            </div>
            <div>
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
                    {{ discount.discountType }} - Bearbeiten
                </h3>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                    Rabattinformationen aktualisieren
                </p>
            </div>
        </div>
    </div>

    <!-- Form Content -->
    <div class="p-6">
        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
            <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
                <!-- Rabatt-Typ - Read Only -->
                <div class="md:col-span-2">
                    <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">
                        Rabatt-Typ
                    </label>
                    <div class="rounded-lg border border-gray-300 bg-gray-50 px-4 py-3 font-mono text-sm font-semibold text-gray-500 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-400">
                        {{ discount.discountType }}
                    </div>
                    <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                        Rabatt-Typ kann nicht geändert werden
                    </p>
                </div>

                <!-- Store Field -->
                <div class="md:col-span-2">
                    {{ form_label(form.store, 'Geschäft', {'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300'}}) }}
                    {{ form_widget(form.store, {'attr': {'class': 'mt-1 block w-full rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm text-gray-900 focus:border-blue-500 focus:ring-2 focus:ring-blue-500 dark:border-gray-700 dark:bg-gray-800 dark:text-white dark:focus:border-blue-500'}}) }}
                    {{ form_errors(form.store) }}
                    <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                        Optional: Gilt für spezifisches Geschäft
                    </p>
                </div>

                <!-- Form Fields -->
                <div>
                    {{ form_label(form.lowQty, 'Mindestmenge', {'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300'}}) }}
                    {{ form_widget(form.lowQty, {'attr': {'class': 'mt-1 block w-full rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm text-gray-900 focus:border-blue-500 focus:ring-2 focus:ring-blue-500 dark:border-gray-700 dark:bg-gray-800 dark:text-white dark:focus:border-blue-500', 'min': '0', 'placeholder': '0'}}) }}
                    {{ form_errors(form.lowQty) }}
                </div>

                <div>
                    {{ form_label(form.highQty, 'Höchstmenge', {'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300'}}) }}
                    {{ form_widget(form.highQty, {'attr': {'class': 'mt-1 block w-full rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm text-gray-900 focus:border-blue-500 focus:ring-2 focus:ring-blue-500 dark:border-gray-700 dark:bg-gray-800 dark:text-white dark:focus:border-blue-500', 'min': '0', 'placeholder': '100'}}) }}
                    {{ form_errors(form.highQty) }}
                </div>

                <div class="md:col-span-2">
                    {{ form_label(form.discount, 'Rabatt (%)', {'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300'}}) }}
                    {{ form_widget(form.discount, {'attr': {'class': 'mt-1 block w-full rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm text-gray-900 focus:border-blue-500 focus:ring-2 focus:ring-blue-500 dark:border-gray-700 dark:bg-gray-800 dark:text-white dark:focus:border-blue-500', 'min': '0', 'max': '100', 'step': '0.01', 'placeholder': '10.00'}}) }}
                    {{ form_errors(form.discount) }}
                    <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                        Prozentwert zwischen 0 und 100 (z.B. 10.50 für 10,5%)
                    </p>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="flex items-center justify-end gap-3 border-t border-gray-200 pt-6 dark:border-gray-800">
                <a href="{{ path('app_discount_show', {'discountType': discount.discountType}) }}" 
                   class="rounded-lg border border-gray-300 bg-white px-4 py-2.5 text-sm font-semibold text-gray-700 shadow-sm transition hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700">
                    Abbrechen
                </a>
                <button type="submit" 
                        class="inline-flex items-center gap-2 rounded-lg bg-blue-600 px-4 py-2.5 text-sm font-semibold text-white shadow-sm transition hover:bg-blue-700 dark:bg-blue-500 dark:hover:bg-blue-600">
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                    Änderungen speichern
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>

<!-- Help Card -->
<div class="mt-6 rounded-lg border border-blue-200 bg-blue-50 p-4 dark:border-blue-900/50 dark:bg-blue-900/10">
    <div class="flex gap-3">
        <svg class="h-5 w-5 flex-shrink-0 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <div class="text-sm text-blue-800 dark:text-blue-300">
            <p class="font-semibold">Hinweis:</p>
            <ul class="mt-2 list-inside list-disc space-y-1">
                <li>Rabatt-Typ kann nicht geändert werden</li>
                <li>Rabatt muss zwischen 0 und 100% liegen</li>
                <li>Alle Pflichtfelder ausfüllen</li>
            </ul>
        </div>
    </div>
</div>
{% endblock %}
