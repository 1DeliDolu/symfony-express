<form method="post" action="{{ path('app_discount_delete', {'discountType': discount.discountType}) }}" onsubmit="return confirm('Möchten Sie diesen Rabatt wirklich löschen?');" class="inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ discount.discountType) }}">
    <button class="rounded-lg bg-red-600 px-3 py-1.5 text-sm font-semibold text-white hover:bg-red-700">Löschen</button>
</form>
