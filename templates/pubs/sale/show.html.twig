{% extends 'admin_base.html.twig' %}

{% block title %}Verkaufsdetails{% endblock %}
{% block page_title %}Verkaufsdetails{% endblock %}

{% block body %}
<!-- Header with Action Buttons -->
<div class="mb-6 flex items-center justify-between">
    <a href="{{ path('app_sale_index') }}" 
       class="inline-flex items-center gap-2 rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm font-semibold text-gray-700 shadow-sm transition hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700">
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Zurück zur Liste
    </a>
    
    <div class="flex items-center gap-2">
        <a href="{{ path('app_sale_edit', {'store': sale.store.storId, 'ordNum': sale.ordNum, 'title': sale.title.titleId}) }}" 
           class="inline-flex items-center gap-2 rounded-lg bg-green-600 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-green-700 dark:bg-green-500 dark:hover:bg-green-600">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
            Bearbeiten
        </a>
        
        <form method="post" action="{{ path('app_sale_delete', {'store': sale.store.storId, 'ordNum': sale.ordNum, 'title': sale.title.titleId}) }}" 
              onsubmit="return confirm('Sind Sie sicher, dass Sie diesen Verkauf löschen möchten?');"
              class="inline">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sale.store.storId ~ sale.ordNum ~ sale.title.titleId) }}">
            <button type="submit" 
                    class="inline-flex items-center gap-2 rounded-lg bg-red-600 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-red-700 dark:bg-red-500 dark:hover:bg-red-600">
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                </svg>
                Löschen
            </button>
        </form>
    </div>
</div>

<!-- Sale Info Card -->
<div class="rounded-lg border border-gray-200 bg-white shadow-sm dark:border-gray-800 dark:bg-gray-900">
    <!-- Header -->
    <div class="border-b border-gray-200 px-6 py-4 dark:border-gray-800">
        <div class="flex items-center gap-4">
            <div class="flex h-16 w-16 items-center justify-center rounded-full bg-green-100 dark:bg-green-900/20">
                <svg class="h-8 w-8 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
            </div>
            <div>
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
                    Bestellung #{{ sale.ordNum }}
                </h3>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                    {{ sale.store.storName }}
                </p>
            </div>
        </div>
    </div>

    <!-- Details Grid -->
    <div class="p-6">
        <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
            <!-- Bestellnummer -->
            <div>
                <label class="mb-1 block text-xs font-medium uppercase text-gray-500 dark:text-gray-400">
                    Bestellnummer
                </label>
                <div class="rounded-lg bg-gray-50 px-4 py-3 font-mono text-sm font-semibold text-gray-900 dark:bg-gray-800 dark:text-white">
                    {{ sale.ordNum }}
                </div>
            </div>

            <!-- Bestelldatum -->
            <div>
                <label class="mb-1 block text-xs font-medium uppercase text-gray-500 dark:text-gray-400">
                    Bestelldatum
                </label>
                <div class="rounded-lg bg-gray-50 px-4 py-3 dark:bg-gray-800">
                    {% if sale.ordDate %}
                        <div class="flex items-center gap-2 text-sm text-gray-900 dark:text-white">
                            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                            </svg>
                            {{ sale.ordDate|date('d.m.Y H:i') }}
                        </div>
                    {% else %}
                        <span class="text-sm text-gray-400">-</span>
                    {% endif %}
                </div>
            </div>

            <!-- Geschäft -->
            <div class="md:col-span-2">
                <label class="mb-1 block text-xs font-medium uppercase text-gray-500 dark:text-gray-400">
                    Geschäft
                </label>
                <div class="rounded-lg bg-gray-50 px-4 py-3 dark:bg-gray-800">
                    <div class="flex items-center gap-3">
                        <span class="inline-flex items-center rounded-full bg-blue-100 px-3 py-1 text-xs font-medium text-blue-800 dark:bg-blue-900/20 dark:text-blue-400">
                            {{ sale.store.storId }}
                        </span>
                        <span class="text-sm font-semibold text-gray-900 dark:text-white">
                            {{ sale.store.storName }}
                        </span>
                    </div>
                    {% if sale.store.storAddress or sale.store.city %}
                        <p class="mt-2 text-xs text-gray-600 dark:text-gray-400">
                            {{ sale.store.storAddress|default('') }}
                            {% if sale.store.city %}
                                {{ sale.store.storAddress ? ', ' : '' }}{{ sale.store.city }}
                            {% endif %}
                            {% if sale.store.state %}
                                , {{ sale.store.state }}
                            {% endif %}
                        </p>
                    {% endif %}
                </div>
            </div>

            <!-- Buch -->
            <div class="md:col-span-2">
                <label class="mb-1 block text-xs font-medium uppercase text-gray-500 dark:text-gray-400">
                    Buch
                </label>
                <div class="rounded-lg bg-gray-50 px-4 py-3 dark:bg-gray-800">
                    <div class="flex items-center gap-3">
                        <span class="inline-flex items-center rounded-full bg-purple-100 px-3 py-1 text-xs font-medium text-purple-800 dark:bg-purple-900/20 dark:text-purple-400">
                            {{ sale.title.titleId }}
                        </span>
                        <span class="text-sm font-semibold text-gray-900 dark:text-white">
                            {{ sale.title.title }}
                        </span>
                    </div>
                    {% if sale.title.type %}
                        <p class="mt-2 text-xs text-gray-600 dark:text-gray-400">
                            Typ: {{ sale.title.type }}
                        </p>
                    {% endif %}
                </div>
            </div>

            <!-- Menge -->
            <div>
                <label class="mb-1 block text-xs font-medium uppercase text-gray-500 dark:text-gray-400">
                    Menge
                </label>
                <div class="rounded-lg bg-gray-50 px-4 py-3 dark:bg-gray-800">
                    <span class="inline-flex items-center rounded-full bg-green-100 px-4 py-2 text-lg font-bold text-green-800 dark:bg-green-900/20 dark:text-green-400">
                        {{ sale.qty }} Stück
                    </span>
                </div>
            </div>

            <!-- Zahlungsbedingungen -->
            <div>
                <label class="mb-1 block text-xs font-medium uppercase text-gray-500 dark:text-gray-400">
                    Zahlungsbedingungen
                </label>
                <div class="rounded-lg bg-gray-50 px-4 py-3 dark:bg-gray-800">
                    <span class="inline-flex items-center rounded-full bg-orange-100 px-3 py-1 text-sm font-medium text-orange-800 dark:bg-orange-900/20 dark:text-orange-400">
                        {{ sale.payterms }}
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Additional Stats Card -->
<div class="mt-6 grid grid-cols-1 gap-6 sm:grid-cols-3">
    <div class="rounded-lg border border-gray-200 bg-white p-6 shadow-sm dark:border-gray-800 dark:bg-gray-900">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Stückpreis</p>
                <p class="mt-2 text-2xl font-bold text-gray-900 dark:text-white">
                    {% if sale.title.price %}
                        ${{ sale.title.price|number_format(2, '.', ',') }}
                    {% else %}
                        -
                    {% endif %}
                </p>
            </div>
            <div class="rounded-full bg-blue-100 p-3 dark:bg-blue-900/20">
                <svg class="h-6 w-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
            </div>
        </div>
    </div>

    <div class="rounded-lg border border-gray-200 bg-white p-6 shadow-sm dark:border-gray-800 dark:bg-gray-900">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Gesamtbetrag</p>
                <p class="mt-2 text-2xl font-bold text-gray-900 dark:text-white">
                    {% if sale.title.price %}
                        ${{ (sale.title.price * sale.qty)|number_format(2, '.', ',') }}
                    {% else %}
                        -
                    {% endif %}
                </p>
            </div>
            <div class="rounded-full bg-green-100 p-3 dark:bg-green-900/20">
                <svg class="h-6 w-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                </svg>
            </div>
        </div>
    </div>

    <div class="rounded-lg border border-gray-200 bg-white p-6 shadow-sm dark:border-gray-800 dark:bg-gray-900">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Bestellalter</p>
                <p class="mt-2 text-2xl font-bold text-gray-900 dark:text-white">
                    {% if sale.ordDate %}
                        {{ 'now'|date('U') - sale.ordDate.timestamp }} Tage
                    {% else %}
                        -
                    {% endif %}
                </p>
            </div>
            <div class="rounded-full bg-purple-100 p-3 dark:bg-purple-900/20">
                <svg class="h-6 w-6 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
            </div>
        </div>
    </div>
</div>
{% endblock %}

