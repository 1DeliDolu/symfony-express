{% extends 'admin_base.html.twig' %}

{% block title %}Verkauf bearbeiten{% endblock %}
{% block page_title %}Verkauf bearbeiten{% endblock %}

{% block body %}
<!-- Header with Navigation -->
<div class="mb-6 flex items-center justify-between">
    <a href="{{ path('app_sale_show', {'store': sale.store.storId, 'ordNum': sale.ordNum, 'title': sale.title.titleId}) }}" 
       class="inline-flex items-center gap-2 rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm font-semibold text-gray-700 shadow-sm transition hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700">
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Zurück
    </a>
    
    <form method="post" action="{{ path('app_sale_delete', {'store': sale.store.storId, 'ordNum': sale.ordNum, 'title': sale.title.titleId}) }}" 
          onsubmit="return confirm('Sind Sie sicher, dass Sie diesen Verkauf löschen möchten?');"
          class="inline">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sale.store.storId ~ sale.ordNum ~ sale.title.titleId) }}">
        <button type="submit" 
                class="inline-flex items-center gap-2 rounded-lg bg-red-600 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-red-700 dark:bg-red-500 dark:hover:bg-red-600">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
            </svg>
            Verkauf löschen
        </button>
    </form>
</div>

<!-- Form Card -->
<div class="rounded-lg border border-gray-200 bg-white shadow-sm dark:border-gray-800 dark:bg-gray-900">
    <!-- Card Header -->
    <div class="border-b border-gray-200 px-6 py-4 dark:border-gray-800">
        <div class="flex items-center gap-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-full bg-green-100 dark:bg-green-900/20">
                <svg class="h-6 w-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
            </div>
            <div>
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
                    Bestellung #{{ sale.ordNum }} - Bearbeiten
                </h3>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                    Verkaufsinformationen aktualisieren
                </p>
            </div>
        </div>
    </div>

    <!-- Form Content -->
    <div class="p-6">
        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
            <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
                <!-- Mağaza - Read Only -->
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">
                        Geschäft
                    </label>
                    <div class="rounded-lg border border-gray-300 bg-gray-50 px-4 py-3 text-sm text-gray-500 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-400">
                        <div class="flex items-center gap-2">
                            <span class="inline-flex items-center rounded-full bg-blue-100 px-2.5 py-0.5 text-xs font-medium text-blue-800 dark:bg-blue-900/20 dark:text-blue-400">
                                {{ sale.store.storId }}
                            </span>
                            {{ sale.store.storName }}
                        </div>
                    </div>
                    <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                        Geschäft kann nicht geändert werden
                    </p>
                </div>

                <!-- Sipariş Numarası - Read Only -->
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">
                        Bestellnummer
                    </label>
                    <div class="rounded-lg border border-gray-300 bg-gray-50 px-4 py-3 font-mono text-sm font-semibold text-gray-500 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-400">
                        {{ sale.ordNum }}
                    </div>
                    <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                        Bestellnummer kann nicht geändert werden
                    </p>
                </div>

                <!-- Kitap - Read Only -->
                <div class="md:col-span-2">
                    <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">
                        Buch
                    </label>
                    <div class="rounded-lg border border-gray-300 bg-gray-50 px-4 py-3 text-sm text-gray-500 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-400">
                        <div class="flex items-center gap-2">
                            <span class="inline-flex items-center rounded-full bg-purple-100 px-2.5 py-0.5 text-xs font-medium text-purple-800 dark:bg-purple-900/20 dark:text-purple-400">
                                {{ sale.title.titleId }}
                            </span>
                            {{ sale.title.title }}
                        </div>
                    </div>
                    <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                        Buch kann nicht geändert werden
                    </p>
                </div>

                <!-- Sipariş Tarihi -->
                <div>
                    {{ form_row(form.ordDate, {
                        'label': 'Bestelldatum',
                        'attr': {
                            'class': 'mt-1 block w-full rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm text-gray-900 focus:border-blue-500 focus:ring-2 focus:ring-blue-500 dark:border-gray-700 dark:bg-gray-800 dark:text-white dark:focus:border-blue-500'
                        },
                        'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300'}
                    }) }}
                </div>

                <!-- Miktar -->
                <div>
                    {{ form_row(form.qty, {
                        'label': 'Menge',
                        'attr': {
                            'class': 'mt-1 block w-full rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm text-gray-900 focus:border-blue-500 focus:ring-2 focus:ring-blue-500 dark:border-gray-700 dark:bg-gray-800 dark:text-white dark:focus:border-blue-500',
                            'min': '1',
                            'placeholder': 'Anzahl eingeben'
                        },
                        'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300'}
                    }) }}
                </div>

                <!-- Ödeme Koşulları -->
                <div class="md:col-span-2">
                    {{ form_row(form.payterms, {
                        'label': 'Zahlungsbedingungen',
                        'attr': {
                            'class': 'mt-1 block w-full rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm text-gray-900 focus:border-blue-500 focus:ring-2 focus:ring-blue-500 dark:border-gray-700 dark:bg-gray-800 dark:text-white dark:focus:border-blue-500',
                            'placeholder': 'z.B.: Netto 30, Netto 60'
                        },
                        'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300'}
                    }) }}
                </div>
            </div>

            <!-- Price Summary -->
            {% if sale.title.price %}
            <div class="rounded-lg bg-blue-50 p-4 dark:bg-blue-900/10">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-blue-900 dark:text-blue-300">Stückpreis</p>
                        <p class="mt-1 text-2xl font-bold text-blue-600 dark:text-blue-400">
                            ${{ sale.title.price|number_format(2, '.', ',') }}
                        </p>
                    </div>
                    <div class="text-right">
                        <p class="text-sm font-medium text-blue-900 dark:text-blue-300">Geschätzte Summe</p>
                        <p class="mt-1 text-2xl font-bold text-blue-600 dark:text-blue-400" id="totalPrice">
                            ${{ (sale.title.price * sale.qty)|number_format(2, '.', ',') }}
                        </p>
                    </div>
                </div>
            </div>
            {% endif %}

            <!-- Form Actions -->
            <div class="flex items-center justify-end gap-3 border-t border-gray-200 pt-6 dark:border-gray-800">
                <a href="{{ path('app_sale_show', {'store': sale.store.storId, 'ordNum': sale.ordNum, 'title': sale.title.titleId}) }}" 
                   class="rounded-lg border border-gray-300 bg-white px-4 py-2.5 text-sm font-semibold text-gray-700 shadow-sm transition hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700">
                    Abbrechen
                </a>
                <button type="submit" 
                        class="inline-flex items-center gap-2 rounded-lg bg-blue-600 px-4 py-2.5 text-sm font-semibold text-white shadow-sm transition hover:bg-blue-700 dark:bg-blue-500 dark:hover:bg-blue-600">
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                    Änderungen speichern
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>

<!-- Help Card -->
<div class="mt-6 rounded-lg border border-blue-200 bg-blue-50 p-4 dark:border-blue-900/50 dark:bg-blue-900/10">
    <div class="flex gap-3">
        <svg class="h-5 w-5 flex-shrink-0 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <div class="text-sm text-blue-800 dark:text-blue-300">
            <p class="font-semibold">Hinweis:</p>
            <ul class="mt-2 list-inside list-disc space-y-1">
                <li>Geschäft, Bestellnummer und Buch können nicht geändert werden</li>
                <li>Nur Bestelldatum, Menge und Zahlungsbedingungen können aktualisiert werden</li>
                <li>Die Menge muss eine positive Zahl sein</li>
            </ul>
        </div>
    </div>
</div>
{% endblock %}

