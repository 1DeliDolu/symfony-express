{% extends 'pubs_base.html.twig' %}

{% block title %}Buch-Autor Zuordnung bearbeiten{% endblock %}
{% block page_title %}Buch-Autor Zuordnung bearbeiten{% endblock %}

{% block body %}
<!-- Header with Navigation -->
<div class="mb-6 flex items-center justify-between">
    <a href="{{ path('app_title_author_show', {'author': title_author.author.auId, 'title': title_author.title.titleId}) }}" 
       class="inline-flex items-center gap-2 rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm font-semibold text-gray-700 shadow-sm transition hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700">
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Zurück
    </a>
    
    <form method="post" action="{{ path('app_title_author_delete', {'author': title_author.author.auId, 'title': title_author.title.titleId}) }}" 
          onsubmit="return confirm('Sind Sie sicher, dass Sie diese Zuordnung löschen möchten?');"
          class="inline">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ title_author.author.auId ~ title_author.title.titleId) }}">
        <button type="submit" 
                class="inline-flex items-center gap-2 rounded-lg bg-red-600 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-red-700 dark:bg-red-500 dark:hover:bg-red-600">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
            </svg>
            Zuordnung löschen
        </button>
    </form>
</div>

<!-- Form Card -->
<div class="rounded-lg border border-gray-200 bg-white shadow-sm dark:border-gray-800 dark:bg-gray-900">
    <!-- Card Header -->
    <div class="border-b border-gray-200 px-6 py-4 dark:border-gray-800">
        <div class="flex items-center gap-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-full bg-blue-100 text-lg font-bold text-blue-600 dark:bg-blue-900/20 dark:text-blue-400">
                <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                </svg>
            </div>
            <div>
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
                    {{ title_author.title.title }} - {{ title_author.author.auFname }} {{ title_author.author.auLname }}
                </h3>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                    Buch-Autor Zuordnung bearbeiten
                </p>
            </div>
        </div>
    </div>

    <!-- Form Content -->
    <div class="p-6">
        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
            <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
                <!-- Read Only Info -->
                <div class="md:col-span-2">
                    <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">
                        Aktuelle Zuordnung
                    </label>
                    <div class="rounded-lg border border-gray-300 bg-gray-50 px-4 py-3 text-sm text-gray-700 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300">
                        <span class="font-semibold">Buch:</span> {{ title_author.title.title }} 
                        <span class="mx-2">•</span>
                        <span class="font-semibold">Autor:</span> {{ title_author.author.auFname }} {{ title_author.author.auLname }}
                    </div>
                    <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                        Buch und Autor können nicht geändert werden
                    </p>
                </div>

                <!-- Form Fields -->
                <div>
                    {{ form_row(form.auOrd, {
                        'label': 'Reihenfolge',
                        'attr': {
                            'class': 'mt-1 block w-full rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm text-gray-900 focus:border-blue-500 focus:ring-2 focus:ring-blue-500 dark:border-gray-700 dark:bg-gray-800 dark:text-white dark:focus:border-blue-500',
                            'placeholder': '1'
                        },
                        'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300'},
                        'help': 'Die Reihenfolge des Autors in der Autorenliste',
                        'help_attr': {'class': 'mt-1 text-xs text-gray-500 dark:text-gray-400'}
                    }) }}
                </div>

                <div>
                    {{ form_row(form.royaltyPer, {
                        'label': 'Tantiemen %',
                        'attr': {
                            'class': 'mt-1 block w-full rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm text-gray-900 focus:border-blue-500 focus:ring-2 focus:ring-blue-500 dark:border-gray-700 dark:bg-gray-800 dark:text-white dark:focus:border-blue-500',
                            'placeholder': '0-100',
                            'min': '0',
                            'max': '100'
                        },
                        'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300'},
                        'help': 'Tantiemenprozentsatz (0-100)',
                        'help_attr': {'class': 'mt-1 text-xs text-gray-500 dark:text-gray-400'}
                    }) }}
                </div>
            </div>

            <!-- Hidden Fields -->
            <div style="display: none;">
                {{ form_row(form.title) }}
                {{ form_row(form.author) }}
            </div>

            {{ form_rest(form) }}

            <!-- Form Actions -->
            <div class="flex items-center justify-end gap-3 border-t border-gray-200 pt-6 dark:border-gray-800">
                <a href="{{ path('app_title_author_show', {'author': title_author.author.auId, 'title': title_author.title.titleId}) }}" 
                   class="rounded-lg border border-gray-300 bg-white px-4 py-2.5 text-sm font-semibold text-gray-700 shadow-sm transition hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700">
                    Abbrechen
                </a>
                <button type="submit" 
                        class="inline-flex items-center gap-2 rounded-lg bg-blue-600 px-4 py-2.5 text-sm font-semibold text-white shadow-sm transition hover:bg-blue-700 dark:bg-blue-500 dark:hover:bg-blue-600">
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                    Änderungen speichern
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>

<!-- Help Card -->
<div class="mt-6 rounded-lg border border-blue-200 bg-blue-50 p-4 dark:border-blue-900/50 dark:bg-blue-900/10">
    <div class="flex gap-3">
        <svg class="h-5 w-5 flex-shrink-0 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <div class="text-sm text-blue-800 dark:text-blue-300">
            <p class="font-semibold">Hinweis:</p>
            <ul class="mt-2 list-inside list-disc space-y-1">
                <li>Buch und Autor können bei dieser Zuordnung nicht geändert werden</li>
                <li>Reihenfolge bestimmt die Position des Autors in der Autorenliste</li>
                <li>Tantiemenprozentsatz muss zwischen 0 und 100 liegen</li>
            </ul>
        </div>
    </div>
</div>
{% endblock %}
