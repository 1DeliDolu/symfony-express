{% extends 'pubs_base.html.twig' %}

{% block title %}Buchdetails{% endblock %}
{% block page_title %}Buchdetails{% endblock %}

{% block body %}
<!-- Header mit Aktionsschaltflächen -->
<div class="mb-6 flex items-center justify-between">
    <a href="{{ path('app_title_index') }}" 
       class="inline-flex items-center gap-2 rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm font-semibold text-gray-700 shadow-sm transition hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700">
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Zurück zur Liste
    </a>
    
    <div class="flex items-center gap-2">
        <a href="{{ path('app_title_edit', {'titleId': title.titleId}) }}" 
           class="inline-flex items-center gap-2 rounded-lg bg-green-600 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-green-700 dark:bg-green-500 dark:hover:bg-green-600">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
            Bearbeiten
        </a>
        
        <form method="post" action="{{ path('app_title_delete', {'titleId': title.titleId}) }}" 
              onsubmit="return confirm('Sind Sie sicher, dass Sie dieses Buch löschen möchten?');"
              class="inline">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ title.titleId) }}">
            <button type="submit" 
                    class="inline-flex items-center gap-2 rounded-lg bg-red-600 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-red-700 dark:bg-red-500 dark:hover:bg-red-600">
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                </svg>
                Löschen
            </button>
        </form>
    </div>
</div>

<!-- Buchinfo-Karte -->
<div class="rounded-lg border border-gray-200 bg-white shadow-sm dark:border-gray-800 dark:bg-gray-900">
    <!-- Kopfzeile -->
    <div class="border-b border-gray-200 px-6 py-4 dark:border-gray-800">
        <div class="flex items-center gap-4">
            <div class="flex h-16 w-16 items-center justify-center rounded-full bg-indigo-100 text-2xl font-bold text-indigo-600 dark:bg-indigo-900/20 dark:text-indigo-400">
                <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                </svg>
            </div>
            <div>
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
                    {{ title.title }}
                </h3>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                    {{ title.type|replace({'_': ' '})|title }} • {{ title.publisher ? title.publisher.pubName : 'Kein Verlag angegeben' }}
                </p>
            </div>
        </div>
    </div>

    <!-- Details-Raster -->
    <div class="p-6">
        <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
            <!-- Buch-ID -->
            <div>
                <label class="mb-1 block text-xs font-medium uppercase text-gray-500 dark:text-gray-400">
                    Buch-ID
                </label>
                <div class="rounded-lg bg-gray-50 px-4 py-3 font-mono text-sm font-semibold text-gray-900 dark:bg-gray-800 dark:text-white">
                    {{ title.titleId }}
                </div>
            </div>

            <!-- Buchtitel -->
            <div>
                <label class="mb-1 block text-xs font-medium uppercase text-gray-500 dark:text-gray-400">
                    Buchtitel
                </label>
                <div class="rounded-lg bg-gray-50 px-4 py-3 text-sm text-gray-900 dark:bg-gray-800 dark:text-white">
                    {{ title.title }}
                </div>
            </div>

            <!-- Kategorie -->
            <div>
                <label class="mb-1 block text-xs font-medium uppercase text-gray-500 dark:text-gray-400">
                    Kategorie
                </label>
                <div class="rounded-lg bg-gray-50 px-4 py-3 dark:bg-gray-800">
                    {% set typeColors = {
                        'business': 'bg-blue-100 text-blue-800 dark:bg-blue-900/20 dark:text-blue-400',
                        'popular_comp': 'bg-green-100 text-green-800 dark:bg-green-900/20 dark:text-green-400',
                        'psychology': 'bg-purple-100 text-purple-800 dark:bg-purple-900/20 dark:text-purple-400',
                        'mod_cook': 'bg-orange-100 text-orange-800 dark:bg-orange-900/20 dark:text-orange-400',
                        'trad_cook': 'bg-orange-100 text-orange-800 dark:bg-orange-900/20 dark:text-orange-400',
                        'UNDECIDED': 'bg-gray-100 text-gray-800 dark:bg-gray-900/20 dark:text-gray-400'
                    } %}
                    <span class="inline-flex items-center rounded-full px-3 py-1 text-sm font-semibold {{ typeColors[title.type] ?? 'bg-gray-100 text-gray-800' }}">
                        {{ title.type|replace({'_': ' '})|title }}
                    </span>
                </div>
            </div>

            <!-- Preis -->
            <div>
                <label class="mb-1 block text-xs font-medium uppercase text-gray-500 dark:text-gray-400">
                    Preis
                </label>
                <div class="rounded-lg bg-gray-50 px-4 py-3 dark:bg-gray-800">
                    <div class="flex items-center gap-2 text-sm text-gray-900 dark:text-white">
                        <svg class="h-5 w-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        <span class="text-lg font-bold">{{ title.price ? '$' ~ title.price|number_format(2, '.', ',') : 'N/A' }}</span>
                    </div>
                </div>
            </div>

            <!-- Vorschuss -->
            <div>
                <label class="mb-1 block text-xs font-medium uppercase text-gray-500 dark:text-gray-400">
                    Vorschuss
                </label>
                <div class="rounded-lg bg-gray-50 px-4 py-3 text-sm text-gray-900 dark:bg-gray-800 dark:text-white">
                    {{ title.advance ? '$' ~ title.advance|number_format(2, '.', ',') : 'N/A' }}
                </div>
            </div>

            <!-- Tantiemensatz -->
            <div>
                <label class="mb-1 block text-xs font-medium uppercase text-gray-500 dark:text-gray-400">
                    Tantiemensatz
                </label>
                <div class="rounded-lg bg-gray-50 px-4 py-3 dark:bg-gray-800">
                    <span class="inline-flex items-center rounded-full bg-purple-100 px-3 py-1 text-sm font-semibold text-purple-800 dark:bg-purple-900/20 dark:text-purple-400">
                        {{ title.royalty ? title.royalty ~ '%' : 'N/A' }}
                    </span>
                </div>
            </div>

            <!-- Jahresverkäufe -->
            <div>
                <label class="mb-1 block text-xs font-medium uppercase text-gray-500 dark:text-gray-400">
                    Jahresverkäufe (YTD)
                </label>
                <div class="rounded-lg bg-gray-50 px-4 py-3 dark:bg-gray-800">
                    <span class="inline-flex items-center rounded-full bg-green-100 px-3 py-1 text-sm font-semibold text-green-800 dark:bg-green-900/20 dark:text-green-400">
                        {{ title.ytdSales ? title.ytdSales|number_format(0, '.', ',') : '0' }} Stück
                    </span>
                </div>
            </div>

            <!-- Verlag -->
            <div>
                <label class="mb-1 block text-xs font-medium uppercase text-gray-500 dark:text-gray-400">
                    Verlag
                </label>
                <div class="rounded-lg bg-gray-50 px-4 py-3 dark:bg-gray-800">
                    {% if title.publisher %}
                        <span class="inline-flex items-center gap-2 text-sm text-gray-900 dark:text-white">
                            <span class="inline-flex items-center rounded-full bg-blue-100 px-2.5 py-0.5 text-xs font-medium text-blue-800 dark:bg-blue-900/20 dark:text-blue-400">
                                {{ title.publisher.pubId }}
                            </span>
                            {{ title.publisher.pubName }}
                        </span>
                    {% else %}
                        <span class="text-sm text-gray-400">-</span>
                    {% endif %}
                </div>
            </div>

            <!-- Veröffentlichungsdatum -->
            <div>
                <label class="mb-1 block text-xs font-medium uppercase text-gray-500 dark:text-gray-400">
                    Veröffentlichungsdatum
                </label>
                <div class="rounded-lg bg-gray-50 px-4 py-3 dark:bg-gray-800">
                    {% if title.pubdate %}
                        <div class="flex items-center gap-2 text-sm text-gray-900 dark:text-white">
                            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                            </svg>
                            {{ title.pubdate|date('d.m.Y') }}
                        </div>
                    {% else %}
                        <span class="text-sm text-gray-400">-</span>
                    {% endif %}
                </div>
            </div>

            <!-- Notizen -->
            {% if title.notes %}
            <div class="md:col-span-2">
                <label class="mb-1 block text-xs font-medium uppercase text-gray-500 dark:text-gray-400">
                    Notizen
                </label>
                <div class="rounded-lg bg-gray-50 px-4 py-3 text-sm text-gray-900 dark:bg-gray-800 dark:text-white">
                    {{ title.notes }}
                </div>
            </div>
            {% endif %}
        </div>
    </div>
</div>

<!-- Zusätzliche Statistik-Karte -->
<div class="mt-6 grid grid-cols-1 gap-6 sm:grid-cols-3">
    <div class="rounded-lg border border-gray-200 bg-white p-6 shadow-sm dark:border-gray-800 dark:bg-gray-900">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Gesamtumsatz</p>
                <p class="mt-2 text-2xl font-bold text-gray-900 dark:text-white">
                    {% if title.price and title.ytdSales %}
                        ${{ (title.price * title.ytdSales)|number_format(2, '.', ',') }}
                    {% else %}
                        $0.00
                    {% endif %}
                </p>
            </div>
            <div class="rounded-full bg-green-100 p-3 dark:bg-green-900/20">
                <svg class="h-6 w-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
            </div>
        </div>
    </div>

    <div class="rounded-lg border border-gray-200 bg-white p-6 shadow-sm dark:border-gray-800 dark:bg-gray-900">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Verkaufte Exemplare</p>
                <p class="mt-2 text-2xl font-bold text-gray-900 dark:text-white">
                    {{ title.ytdSales ? title.ytdSales|number_format(0, '.', ',') : '0' }}
                </p>
            </div>
            <div class="rounded-full bg-blue-100 p-3 dark:bg-blue-900/20">
                <svg class="h-6 w-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
                </svg>
            </div>
        </div>
    </div>

    <div class="rounded-lg border border-gray-200 bg-white p-6 shadow-sm dark:border-gray-800 dark:bg-gray-900">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Tantiemeneinnahmen</p>
                <p class="mt-2 text-2xl font-bold text-gray-900 dark:text-white">
                    {% if title.price and title.ytdSales and title.royalty %}
                        ${{ ((title.price * title.ytdSales * title.royalty) / 100)|number_format(2, '.', ',') }}
                    {% else %}
                        $0.00
                    {% endif %}
                </p>
            </div>
            <div class="rounded-full bg-purple-100 p-3 dark:bg-purple-900/20">
                <svg class="h-6 w-6 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                </svg>
            </div>
        </div>
    </div>
</div>
{% endblock %}
