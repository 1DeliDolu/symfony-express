{% extends 'pubs_base.html.twig' %}

{% block title %}Neues Buch{% endblock %}
{% block page_title %}Neues Buch erstellen{% endblock %}

{% block body %}
<!-- Breadcrumb -->
<nav class="mb-6 flex" aria-label="Breadcrumb">
    <ol class="inline-flex items-center space-x-1 md:space-x-3">
        <li class="inline-flex items-center">
            <a href="{{ path('app_dashboard') }}" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-indigo-600 dark:text-gray-400 dark:hover:text-white">
                <svg class="mr-2 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
                </svg>
                Dashboard
            </a>
        </li>
        <li>
            <div class="flex items-center">
                <svg class="h-6 w-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
                </svg>
                <a href="{{ path('app_title_index') }}" class="ml-1 text-sm font-medium text-gray-700 hover:text-indigo-600 dark:text-gray-400 dark:hover:text-white md:ml-2">
                    Bücher
                </a>
            </div>
        </li>
        <li aria-current="page">
            <div class="flex items-center">
                <svg class="h-6 w-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
                </svg>
                <span class="ml-1 text-sm font-medium text-gray-500 dark:text-gray-400 md:ml-2">Neu erstellen</span>
            </div>
        </li>
    </ol>
</nav>

<!-- Form Card -->
<div class="rounded-lg border border-gray-200 bg-white shadow-sm dark:border-gray-800 dark:bg-gray-900">
    <div class="border-b border-gray-200 px-6 py-4 dark:border-gray-800">
        <div class="flex items-center gap-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-full bg-indigo-100 text-lg font-bold text-indigo-600 dark:bg-indigo-900/20 dark:text-indigo-400">
                <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                </svg>
            </div>
            <div>
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
                    Buchinformationen
                </h3>
                <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">
                    Geben Sie die Details des neuen Buches ein
                </p>
            </div>
        </div>
    </div>

    <div class="p-6">
        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
            
            <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
                <!-- Kitap ID -->
                <div class="lg:col-span-3">
                    {{ form_label(form.titleId, null, {'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-900 dark:text-white'}}) }}
                    {{ form_widget(form.titleId, {'attr': {'class': 'block w-full rounded-lg border border-gray-300 bg-white p-2.5 text-sm text-gray-900 focus:border-indigo-500 focus:ring-indigo-500 dark:border-gray-600 dark:bg-gray-800 dark:text-white dark:placeholder-gray-400 dark:focus:border-indigo-500 dark:focus:ring-indigo-500', 'placeholder': 'BU1032'}}) }}
                    {{ form_errors(form.titleId) }}
                    <p class="mt-2 text-xs text-gray-500 dark:text-gray-400">Format: 2 Großbuchstaben + 4 Ziffern (z. B. BU1032, PC8888)</p>
                </div>

                <!-- Kitap Adı -->
                <div class="lg:col-span-3">
                    {{ form_label(form.title, null, {'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-900 dark:text-white'}}) }}
                    {{ form_widget(form.title, {'attr': {'class': 'block w-full rounded-lg border border-gray-300 bg-white p-2.5 text-sm text-gray-900 focus:border-indigo-500 focus:ring-indigo-500 dark:border-gray-600 dark:bg-gray-800 dark:text-white dark:placeholder-gray-400 dark:focus:border-indigo-500 dark:focus:ring-indigo-500', 'placeholder': 'Vollständiger Buchtitel'}}) }}
                    {{ form_errors(form.title) }}
                </div>

                <!-- Tür -->
                <div>
                    {{ form_label(form.type, null, {'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-900 dark:text-white'}}) }}
                    {{ form_widget(form.type, {'attr': {'class': 'block w-full rounded-lg border border-gray-300 bg-white p-2.5 text-sm text-gray-900 focus:border-indigo-500 focus:ring-indigo-500 dark:border-gray-600 dark:bg-gray-800 dark:text-white dark:placeholder-gray-400 dark:focus:border-indigo-500 dark:focus:ring-indigo-500'}}) }}
                    {{ form_errors(form.type) }}
                </div>

                <!-- Yayıncı -->
                <div>
                    {{ form_label(form.publisher, null, {'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-900 dark:text-white'}}) }}
                    {{ form_widget(form.publisher, {'attr': {'class': 'block w-full rounded-lg border border-gray-300 bg-white p-2.5 text-sm text-gray-900 focus:border-indigo-500 focus:ring-indigo-500 dark:border-gray-600 dark:bg-gray-800 dark:text-white dark:placeholder-gray-400 dark:focus:border-indigo-500 dark:focus:ring-indigo-500'}}) }}
                    {{ form_errors(form.publisher) }}
                </div>

                <!-- Yayın Tarihi -->
                <div>
                    {{ form_label(form.pubdate, null, {'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-900 dark:text-white'}}) }}
                    {{ form_widget(form.pubdate, {'attr': {'class': 'block w-full rounded-lg border border-gray-300 bg-white p-2.5 text-sm text-gray-900 focus:border-indigo-500 focus:ring-indigo-500 dark:border-gray-600 dark:bg-gray-800 dark:text-white dark:placeholder-gray-400 dark:focus:border-indigo-500 dark:focus:ring-indigo-500'}}) }}
                    {{ form_errors(form.pubdate) }}
                </div>

                <!-- Fiyat -->
                <div>
                    {{ form_label(form.price, null, {'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-900 dark:text-white'}}) }}
                    {{ form_widget(form.price, {'attr': {'class': 'block w-full rounded-lg border border-gray-300 bg-white p-2.5 text-sm text-gray-900 focus:border-indigo-500 focus:ring-indigo-500 dark:border-gray-600 dark:bg-gray-800 dark:text-white dark:placeholder-gray-400 dark:focus:border-indigo-500 dark:focus:ring-indigo-500', 'placeholder': '19.99', 'step': '0.01', 'min': '0'}}) }}
                    {{ form_errors(form.price) }}
                    <p class="mt-2 text-xs text-gray-500 dark:text-gray-400">Preis in USD</p>
                </div>

                <!-- Avans -->
                <div>
                    {{ form_label(form.advance, null, {'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-900 dark:text-white'}}) }}
                    {{ form_widget(form.advance, {'attr': {'class': 'block w-full rounded-lg border border-gray-300 bg-white p-2.5 text-sm text-gray-900 focus:border-indigo-500 focus:ring-indigo-500 dark:border-gray-600 dark:bg-gray-800 dark:text-white dark:placeholder-gray-400 dark:focus:border-indigo-500 dark:focus:ring-indigo-500', 'placeholder': '5000.00', 'step': '0.01', 'min': '0'}}) }}
                    {{ form_errors(form.advance) }}
                </div>

                <!-- Telif Oranı -->
                <div>
                    {{ form_label(form.royalty, null, {'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-900 dark:text-white'}}) }}
                    {{ form_widget(form.royalty, {'attr': {'class': 'block w-full rounded-lg border border-gray-300 bg-white p-2.5 text-sm text-gray-900 focus:border-indigo-500 focus:ring-indigo-500 dark:border-gray-600 dark:bg-gray-800 dark:text-white dark:placeholder-gray-400 dark:focus:border-indigo-500 dark:focus:ring-indigo-500', 'placeholder': '10', 'min': '0', 'max': '100'}}) }}
                    {{ form_errors(form.royalty) }}
                    <p class="mt-2 text-xs text-gray-500 dark:text-gray-400">Prozentwert 0–100</p>
                </div>

                <!-- Yıllık Satış -->
                <div>
                    {{ form_label(form.ytdSales, null, {'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-900 dark:text-white'}}) }}
                    {{ form_widget(form.ytdSales, {'attr': {'class': 'block w-full rounded-lg border border-gray-300 bg-white p-2.5 text-sm text-gray-900 focus:border-indigo-500 focus:ring-indigo-500 dark:border-gray-600 dark:bg-gray-800 dark:text-white dark:placeholder-gray-400 dark:focus:border-indigo-500 dark:focus:ring-indigo-500', 'placeholder': '1000', 'min': '0'}}) }}
                    {{ form_errors(form.ytdSales) }}
                </div>

                <!-- Notlar -->
                <div class="lg:col-span-3">
                    {{ form_label(form.notes, null, {'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-900 dark:text-white'}}) }}
                    {{ form_widget(form.notes, {'attr': {'class': 'block w-full rounded-lg border border-gray-300 bg-white p-2.5 text-sm text-gray-900 focus:border-indigo-500 focus:ring-indigo-500 dark:border-gray-600 dark:bg-gray-800 dark:text-white dark:placeholder-gray-400 dark:focus:border-indigo-500 dark:focus:ring-indigo-500', 'placeholder': 'Notizen zum Buch...', 'rows': '3'}}) }}
                    {{ form_errors(form.notes) }}
                </div>
            </div>

            {{ form_rest(form) }}

            <div class="flex items-center justify-between border-t border-gray-200 pt-6 dark:border-gray-800">
                <a href="{{ path('app_title_index') }}" 
                   class="rounded-lg border border-gray-300 px-5 py-2.5 text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:border-gray-600 dark:text-gray-300 dark:hover:bg-gray-700 dark:focus:ring-gray-700">
                    <svg class="mr-2 inline-block h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                    </svg>
                    Zur Liste
                </a>

                <button type="submit" 
                        class="rounded-lg bg-indigo-600 px-5 py-2.5 text-sm font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-4 focus:ring-indigo-300 dark:bg-indigo-500 dark:hover:bg-indigo-600 dark:focus:ring-indigo-800">
                    <svg class="mr-2 inline-block h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                    Speichern
                </button>
            </div>

        {{ form_end(form) }}
    </div>
</div>

<!-- Help Card -->
<div class="mt-6 rounded-lg border border-indigo-200 bg-indigo-50 p-4 dark:border-indigo-900/50 dark:bg-indigo-900/10">
    <div class="flex gap-3">
        <svg class="h-5 w-5 flex-shrink-0 text-indigo-600 dark:text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <div class="text-sm text-indigo-800 dark:text-indigo-300">
            <p class="font-semibold">Ausfüllhilfe:</p>
            <ul class="mt-2 list-inside list-disc space-y-1">
                <li>Buch‑ID‑Format: 2 Großbuchstaben + 4 Ziffern (z. B. BU1032, PC8888)</li>
                <li>Typ‑Optionen: business, mod_cook, popular_comp, psychology, trad_cook</li>
                <li>Preis und Vorschuss müssen in USD angegeben werden</li>
                <li>Lizenzsatz ist ein Prozentwert zwischen 0 und 100</li>
                <li>Jahresumsatz (YTD) muss eine positive ganze Zahl sein</li>
            </ul>
        </div>
    </div>
</div>
{% endblock %}
