{% extends 'pubs_base.html.twig' %}

{% block title %}Buch bearbeiten{% endblock %}
{% block page_title %}Buch bearbeiten{% endblock %}

{% block body %}
<!-- Kopfbereich mit Navigation -->
<div class="mb-6 flex items-center justify-between">
    <a href="{{ path('app_title_show', {'titleId': title.titleId}) }}" 
       class="inline-flex items-center gap-2 rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm font-semibold text-gray-700 shadow-sm transition hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700">
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Zurück
    </a>
    
    <form method="post" action="{{ path('app_title_delete', {'titleId': title.titleId}) }}" 
          onsubmit="return confirm('Sind Sie sicher, dass Sie dieses Buch löschen möchten?');"
          class="inline">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ title.titleId) }}">
        <button type="submit" 
                class="inline-flex items-center gap-2 rounded-lg bg-red-600 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-red-700 dark:bg-red-500 dark:hover:bg-red-600">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
            </svg>
            Buch löschen
        </button>
    </form>
</div>

<!-- Formular-Karte -->
<div class="rounded-lg border border-gray-200 bg-white shadow-sm dark:border-gray-800 dark:bg-gray-900">
    <!-- Kartenkopf -->
    <div class="border-b border-gray-200 px-6 py-4 dark:border-gray-800">
        <div class="flex items-center gap-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-full bg-indigo-100 text-lg font-bold text-indigo-600 dark:bg-indigo-900/20 dark:text-indigo-400">
                <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
            </div>
            <div>
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
                    {{ title.title }} - Bearbeiten
                </h3>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                    Aktualisieren Sie die Buchinformationen
                </p>
            </div>
        </div>
    </div>

    <!-- Formularinhalt -->
    <div class="p-6">
        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
            <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
                <!-- Buch-ID - Nur Lesen -->
                <div class="md:col-span-2">
                    <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">
                        Buch-ID
                    </label>
                    <div class="rounded-lg border border-gray-300 bg-gray-50 px-4 py-3 font-mono text-sm font-semibold text-gray-500 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-400">
                        {{ title.titleId }}
                    </div>
                    <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                        Die Buch-ID kann nicht geändert werden (Format: 2 Buchstaben + 4 Ziffern)
                    </p>
                </div>

                <!-- Buchtitel -->
                <div class="md:col-span-2">
                    {{ form_row(form.title, {
                        'label': 'Buchtitel',
                        'attr': {
                            'class': 'mt-1 block w-full rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm text-gray-900 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500 dark:border-gray-700 dark:bg-gray-800 dark:text-white dark:focus:border-indigo-500',
                            'placeholder': 'Geben Sie den vollständigen Buchtitel ein'
                        },
                        'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300'}
                    }) }}
                </div>

                <!-- Genre -->
                <div>
                    {{ form_row(form.type, {
                        'label': 'Genre',
                        'attr': {
                            'class': 'mt-1 block w-full rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm text-gray-900 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500 dark:border-gray-700 dark:bg-gray-800 dark:text-white dark:focus:border-indigo-500'
                        },
                        'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300'}
                    }) }}
                </div>

                <!-- Verlag -->
                <div>
                    {{ form_row(form.publisher, {
                        'label': 'Verlag',
                        'attr': {
                            'class': 'mt-1 block w-full rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm text-gray-900 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500 dark:border-gray-700 dark:bg-gray-800 dark:text-white dark:focus:border-indigo-500'
                        },
                        'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300'}
                    }) }}
                </div>

                <!-- Preis -->
                <div>
                    {{ form_row(form.price, {
                        'label': 'Preis ($)',
                        'attr': {
                            'class': 'mt-1 block w-full rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm text-gray-900 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500 dark:border-gray-700 dark:bg-gray-800 dark:text-white dark:focus:border-indigo-500',
                            'placeholder': '19.99',
                            'step': '0.01',
                            'min': '0'
                        },
                        'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300'}
                    }) }}
                </div>

                <!-- Vorschuss -->
                <div>
                    {{ form_row(form.advance, {
                        'label': 'Vorschuss ($)',
                        'attr': {
                            'class': 'mt-1 block w-full rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm text-gray-900 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500 dark:border-gray-700 dark:bg-gray-800 dark:text-white dark:focus:border-indigo-500',
                            'placeholder': '5000.00',
                            'step': '0.01',
                            'min': '0'
                        },
                        'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300'}
                    }) }}
                </div>

                <!-- Tantiemen -->
                <div>
                    {{ form_row(form.royalty, {
                        'label': 'Tantiemen (%)',
                        'attr': {
                            'class': 'mt-1 block w-full rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm text-gray-900 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500 dark:border-gray-700 dark:bg-gray-800 dark:text-white dark:focus:border-indigo-500',
                            'placeholder': '10',
                            'min': '0',
                            'max': '100'
                        },
                        'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300'}
                    }) }}
                </div>

                <!-- Jahresverkäufe -->
                <div>
                    {{ form_row(form.ytdSales, {
                        'label': 'Jahresverkäufe (YTD)',
                        'attr': {
                            'class': 'mt-1 block w-full rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm text-gray-900 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500 dark:border-gray-700 dark:bg-gray-800 dark:text-white dark:focus:border-indigo-500',
                            'placeholder': '1000',
                            'min': '0'
                        },
                        'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300'}
                    }) }}
                </div>

                <!-- Veröffentlichungsdatum -->
                <div>
                    {{ form_row(form.pubdate, {
                        'label': 'Veröffentlichungsdatum',
                        'attr': {
                            'class': 'mt-1 block w-full rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm text-gray-900 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500 dark:border-gray-700 dark:bg-gray-800 dark:text-white dark:focus:border-indigo-500'
                        },
                        'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300'}
                    }) }}
                </div>

                <!-- Notizen -->
                <div class="md:col-span-2">
                    {{ form_row(form.notes, {
                        'label': 'Notizen',
                        'attr': {
                            'class': 'mt-1 block w-full rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm text-gray-900 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500 dark:border-gray-700 dark:bg-gray-800 dark:text-white dark:focus:border-indigo-500',
                            'placeholder': 'Notizen zum Buch...',
                            'rows': '3'
                        },
                        'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300'}
                    }) }}
                </div>
            </div>

            <!-- Formularaktionen -->
            <div class="flex items-center justify-end gap-3 border-t border-gray-200 pt-6 dark:border-gray-800">
                <a href="{{ path('app_title_show', {'titleId': title.titleId}) }}" 
                   class="rounded-lg border border-gray-300 bg-white px-4 py-2.5 text-sm font-semibold text-gray-700 shadow-sm transition hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700">
                    Abbrechen
                </a>
                <button type="submit" 
                        class="inline-flex items-center gap-2 rounded-lg bg-indigo-600 px-4 py-2.5 text-sm font-semibold text-white shadow-sm transition hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-600">
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                    Änderungen speichern
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>

<!-- Hilfekarte -->
<div class="mt-6 rounded-lg border border-indigo-200 bg-indigo-50 p-4 dark:border-indigo-900/50 dark:bg-indigo-900/10">
    <div class="flex gap-3">
        <svg class="h-5 w-5 flex-shrink-0 text-indigo-600 dark:text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <div class="text-sm text-indigo-800 dark:text-indigo-300">
            <p class="font-semibold">Information:</p>
            <ul class="mt-2 list-inside list-disc space-y-1">
                <li>Die Buch-ID kann nicht geändert werden</li>
                <li>Preis- und Vorschusswerte können Dezimalzahlen sein</li>
                <li>Die Tantiemen müssen zwischen 0 und 100 liegen</li>
                <li>Die jährliche Verkaufszahl muss eine positive Zahl sein</li>
            </ul>
        </div>
    </div>
</div>
{% endblock %}
