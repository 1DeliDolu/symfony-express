{% extends 'pubs_base.html.twig' %}

{% block title %}Autor bearbeiten{% endblock %}
{% block page_title %}Autor bearbeiten{% endblock %}

{% block body %}
<!-- Header with Navigation -->
<div class="mb-6 flex items-center justify-between">
    <a href="{{ path('app_author_show', {'auId': author.auId}) }}" 
       class="inline-flex items-center gap-2 rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm font-semibold text-gray-700 shadow-sm transition hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700">
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Zurück
    </a>
    
    <form method="post" action="{{ path('app_author_delete', {'auId': author.auId}) }}" 
          onsubmit="return confirm('Möchten Sie diesen Autor wirklich löschen?');"
          class="inline">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ author.auId) }}">
        <button type="submit" 
                class="inline-flex items-center gap-2 rounded-lg bg-red-600 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-red-700 dark:bg-red-500 dark:hover:bg-red-600">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
            </svg>
            Autor löschen
        </button>
    </form>
</div>

<!-- Form Card -->
<div class="rounded-lg border border-gray-200 bg-white shadow-sm dark:border-gray-800 dark:bg-gray-900">
    <!-- Card Header -->
    <div class="border-b border-gray-200 px-6 py-4 dark:border-gray-800">
        <div class="flex items-center gap-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-full bg-purple-100 text-lg font-bold text-purple-600 dark:bg-purple-900/20 dark:text-purple-400">
                <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
            </div>
            <div>
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
                    {{ author.auFname }} {{ author.auLname }} - Bearbeiten
                </h3>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                    Aktualisieren Sie die Angaben des Autors
                </p>
            </div>
        </div>
    </div>

    <!-- Form Content -->
    <div class="p-6">
        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
            <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
                <!-- Yazar ID - Read Only -->
                <div class="md:col-span-2">
                    <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">
                        Autor-ID
                    </label>
                    <div class="rounded-lg border border-gray-300 bg-gray-50 px-4 py-3 font-mono text-sm font-semibold text-gray-500 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-400">
                        {{ author.auId }}
                    </div>
                    <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                        Die Autor-ID kann nicht geändert werden (Format: XXX-XX-XXXX)
                    </p>
                </div>

                <!-- Form Fields -->
                <div>
                    {{ form_row(form.auFname, {
                        'label': 'Vorname',
                        'attr': {
                            'class': 'mt-1 block w-full rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm text-gray-900 focus:border-purple-500 focus:ring-2 focus:ring-purple-500 dark:border-gray-700 dark:bg-gray-800 dark:text-white dark:focus:border-purple-500',
                            'placeholder': 'Geben Sie den Vornamen ein'
                        },
                        'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300'}
                    }) }}
                </div>

                <div>
                    {{ form_row(form.auLname, {
                        'label': 'Nachname',
                        'attr': {
                            'class': 'mt-1 block w-full rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm text-gray-900 focus:border-purple-500 focus:ring-2 focus:ring-purple-500 dark:border-gray-700 dark:bg-gray-800 dark:text-white dark:focus:border-purple-500',
                            'placeholder': 'Geben Sie den Nachnamen ein'
                        },
                        'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300'}
                    }) }}
                </div>

                <div>
                    {{ form_row(form.phone, {
                        'label': 'Telefon',
                        'attr': {
                            'class': 'mt-1 block w-full rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm text-gray-900 focus:border-purple-500 focus:ring-2 focus:ring-purple-500 dark:border-gray-700 dark:bg-gray-800 dark:text-white dark:focus:border-purple-500',
                            'placeholder': '555 123-4567'
                        },
                        'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300'}
                    }) }}
                </div>

                <div>
                    {{ form_row(form.contract, {
                        'label': 'Vertragsstatus',
                        'attr': {
                            'class': 'mt-1 h-5 w-5 rounded border-gray-300 text-purple-600 focus:ring-purple-500 dark:border-gray-700 dark:bg-gray-800'
                        },
                        'label_attr': {'class': 'mb-2 flex items-center gap-2 text-sm font-medium text-gray-700 dark:text-gray-300'}
                    }) }}
                </div>

                <div class="md:col-span-2">
                    {{ form_row(form.address, {
                        'label': 'Adresse',
                        'attr': {
                            'class': 'mt-1 block w-full rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm text-gray-900 focus:border-purple-500 focus:ring-2 focus:ring-purple-500 dark:border-gray-700 dark:bg-gray-800 dark:text-white dark:focus:border-purple-500',
                            'placeholder': 'Vollständige Adresse eingeben'
                        },
                        'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300'}
                    }) }}
                </div>

                <div>
                    {{ form_row(form.city, {
                        'label': 'Stadt',
                        'attr': {
                            'class': 'mt-1 block w-full rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm text-gray-900 focus:border-purple-500 focus:ring-2 focus:ring-purple-500 dark:border-gray-700 dark:bg-gray-800 dark:text-white dark:focus:border-purple-500',
                            'placeholder': 'Stadtname'
                        },
                        'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300'}
                    }) }}
                </div>

                <div>
                    {{ form_row(form.state, {
                        'label': 'Bundesstaat',
                        'attr': {
                            'class': 'mt-1 block w-full rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm text-gray-900 focus:border-purple-500 focus:ring-2 focus:ring-purple-500 dark:border-gray-700 dark:bg-gray-800 dark:text-white dark:focus:border-purple-500',
                            'placeholder': 'CA',
                            'maxlength': '2'
                        },
                        'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300'}
                    }) }}
                </div>

                <div>
                    {{ form_row(form.zip, {
                        'label': 'Postleitzahl',
                        'attr': {
                            'class': 'mt-1 block w-full rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm text-gray-900 focus:border-purple-500 focus:ring-2 focus:ring-purple-500 dark:border-gray-700 dark:bg-gray-800 dark:text-white dark:focus:border-purple-500',
                            'placeholder': '12345',
                            'maxlength': '5'
                        },
                        'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300'}
                    }) }}
                </div>
            </div>

            <!-- Form Actions -->
            <div class="flex items-center justify-end gap-3 border-t border-gray-200 pt-6 dark:border-gray-800">
                <a href="{{ path('app_author_show', {'auId': author.auId}) }}" 
                   class="rounded-lg border border-gray-300 bg-white px-4 py-2.5 text-sm font-semibold text-gray-700 shadow-sm transition hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700">
                    Abbrechen
                </a>
                <button type="submit" 
                        class="inline-flex items-center gap-2 rounded-lg bg-purple-600 px-4 py-2.5 text-sm font-semibold text-white shadow-sm transition hover:bg-purple-700 dark:bg-purple-500 dark:hover:bg-purple-600">
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                    Änderungen speichern
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>

<!-- Help Card -->
<div class="mt-6 rounded-lg border border-purple-200 bg-purple-50 p-4 dark:border-purple-900/50 dark:bg-purple-900/10">
    <div class="flex gap-3">
        <svg class="h-5 w-5 flex-shrink-0 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <div class="text-sm text-purple-800 dark:text-purple-300">
            <p class="font-semibold">Info:</p>
            <ul class="mt-2 list-inside list-disc space-y-1">
                <li>Die Autor-ID kann nicht geändert werden</li>
                <li>Telefonformat: XXX XXX-XXXX oder "UNKNOWN"</li>
                <li>Der Bundesstaat-Code muss 2 Großbuchstaben sein (z. B.: CA, NY)</li>
                <li>Die Postleitzahl muss 5 Ziffern enthalten</li>
            </ul>
        </div>
    </div>
</div>
{% endblock %}
