{% extends 'admin_base.html.twig' %}

{% block title %}Neuer Autor{% endblock %}
{% block page_title %}Neuen Autor erstellen{% endblock %}

{% block body %}
<!-- Breadcrumb -->
<nav class="mb-6 flex" aria-label="Breadcrumb">
    <ol class="inline-flex items-center space-x-1 md:space-x-3">
        <li class="inline-flex items-center">
            <a href="{{ path('app_dashboard') }}" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-purple-600 dark:text-gray-400 dark:hover:text-white">
                <svg class="mr-2 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
                </svg>
                Dashboard
            </a>
        </li>
        <li>
            <div class="flex items-center">
                <svg class="h-6 w-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
                </svg>
                <a href="{{ path('app_author_index') }}" class="ml-1 text-sm font-medium text-gray-700 hover:text-purple-600 dark:text-gray-400 dark:hover:text-white md:ml-2">
                    Autoren
                </a>
            </div>
        </li>
        <li aria-current="page">
            <div class="flex items-center">
                <svg class="h-6 w-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
                </svg>
                <span class="ml-1 text-sm font-medium text-gray-500 dark:text-gray-400 md:ml-2">Neu erstellen</span>
            </div>
        </li>
    </ol>
</nav>

<!-- Form Card -->
<div class="rounded-lg border border-gray-200 bg-white shadow-sm dark:border-gray-800 dark:bg-gray-900">
    <div class="border-b border-gray-200 px-6 py-4 dark:border-gray-800">
        <div class="flex items-center gap-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-full bg-purple-100 text-lg font-bold text-purple-600 dark:bg-purple-900/20 dark:text-purple-400">
                <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                </svg>
            </div>
            <div>
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
                    Autoreninformationen
                </h3>
                <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">
                    Geben Sie die Details des neuen Autors ein
                </p>
            </div>
        </div>
    </div>

    <div class="p-6">
        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
            
            <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
                <div class="lg:col-span-3">
                    {{ form_label(form.auId, null, {'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-900 dark:text-white'}}) }}
                    {{ form_widget(form.auId, {'attr': {'class': 'block w-full rounded-lg border border-gray-300 bg-white p-2.5 text-sm text-gray-900 focus:border-purple-500 focus:ring-purple-500 dark:border-gray-600 dark:bg-gray-800 dark:text-white dark:placeholder-gray-400 dark:focus:border-purple-500 dark:focus:ring-purple-500', 'placeholder': '123-45-6789'}}) }}
                    {{ form_errors(form.auId) }}
                    <p class="mt-2 text-xs text-gray-500 dark:text-gray-400">Format: XXX-XX-XXXX (z. B.: 123-45-6789)</p>
                </div>

                <div>
                    {{ form_label(form.auFname, null, {'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-900 dark:text-white'}}) }}
                    {{ form_widget(form.auFname, {'attr': {'class': 'block w-full rounded-lg border border-gray-300 bg-white p-2.5 text-sm text-gray-900 focus:border-purple-500 focus:ring-purple-500 dark:border-gray-600 dark:bg-gray-800 dark:text-white dark:placeholder-gray-400 dark:focus:border-purple-500 dark:focus:ring-purple-500', 'placeholder': 'Vorname'}}) }}
                    {{ form_errors(form.auFname) }}
                </div>

                <div>
                    {{ form_label(form.auLname, null, {'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-900 dark:text-white'}}) }}
                    {{ form_widget(form.auLname, {'attr': {'class': 'block w-full rounded-lg border border-gray-300 bg-white p-2.5 text-sm text-gray-900 focus:border-purple-500 focus:ring-purple-500 dark:border-gray-600 dark:bg-gray-800 dark:text-white dark:placeholder-gray-400 dark:focus:border-purple-500 dark:focus:ring-purple-500', 'placeholder': 'Nachname'}}) }}
                    {{ form_errors(form.auLname) }}
                </div>

                <div>
                    {{ form_label(form.phone, null, {'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-900 dark:text-white'}}) }}
                    {{ form_widget(form.phone, {'attr': {'class': 'block w-full rounded-lg border border-gray-300 bg-white p-2.5 text-sm text-gray-900 focus:border-purple-500 focus:ring-purple-500 dark:border-gray-600 dark:bg-gray-800 dark:text-white dark:placeholder-gray-400 dark:focus:border-purple-500 dark:focus:ring-purple-500', 'placeholder': '555 123-4567'}}) }}
                    {{ form_errors(form.phone) }}
                    <p class="mt-2 text-xs text-gray-500 dark:text-gray-400">Format: XXX XXX-XXXX oder "UNKNOWN"</p>
                </div>

                <div class="lg:col-span-3">
                    {{ form_label(form.address, null, {'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-900 dark:text-white'}}) }}
                    {{ form_widget(form.address, {'attr': {'class': 'block w-full rounded-lg border border-gray-300 bg-white p-2.5 text-sm text-gray-900 focus:border-purple-500 focus:ring-purple-500 dark:border-gray-600 dark:bg-gray-800 dark:text-white dark:placeholder-gray-400 dark:focus:border-purple-500 dark:focus:ring-purple-500', 'placeholder': 'Vollständige Adresse'}}) }}
                    {{ form_errors(form.address) }}
                </div>

                <div>
                    {{ form_label(form.city, null, {'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-900 dark:text-white'}}) }}
                    {{ form_widget(form.city, {'attr': {'class': 'block w-full rounded-lg border border-gray-300 bg-white p-2.5 text-sm text-gray-900 focus:border-purple-500 focus:ring-purple-500 dark:border-gray-600 dark:bg-gray-800 dark:text-white dark:placeholder-gray-400 dark:focus:border-purple-500 dark:focus:ring-purple-500', 'placeholder': 'Stadt'}}) }}
                    {{ form_errors(form.city) }}
                </div>

                <div>
                    {{ form_label(form.state, null, {'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-900 dark:text-white'}}) }}
                    {{ form_widget(form.state, {'attr': {'class': 'block w-full rounded-lg border border-gray-300 bg-white p-2.5 text-sm text-gray-900 focus:border-purple-500 focus:ring-purple-500 dark:border-gray-600 dark:bg-gray-800 dark:text-white dark:placeholder-gray-400 dark:focus:border-purple-500 dark:focus:ring-purple-500', 'placeholder': 'CA', 'maxlength': '2'}}) }}
                    {{ form_errors(form.state) }}
                    <p class="mt-2 text-xs text-gray-500 dark:text-gray-400">2 Großbuchstaben (z. B.: CA, NY)</p>
                </div>

                <div>
                    {{ form_label(form.zip, null, {'label_attr': {'class': 'mb-2 block text-sm font-medium text-gray-900 dark:text-white'}}) }}
                    {{ form_widget(form.zip, {'attr': {'class': 'block w-full rounded-lg border border-gray-300 bg-white p-2.5 text-sm text-gray-900 focus:border-purple-500 focus:ring-purple-500 dark:border-gray-600 dark:bg-gray-800 dark:text-white dark:placeholder-gray-400 dark:focus:border-purple-500 dark:focus:ring-purple-500', 'placeholder': '12345', 'maxlength': '5'}}) }}
                    {{ form_errors(form.zip) }}
                    <p class="mt-2 text-xs text-gray-500 dark:text-gray-400">5 Ziffern</p>
                </div>

                <div class="lg:col-span-3">
                    <div class="flex items-center">
                        {{ form_widget(form.contract, {'attr': {'class': 'h-5 w-5 rounded border-gray-300 text-purple-600 focus:ring-purple-500 dark:border-gray-600 dark:bg-gray-800 dark:focus:ring-purple-500'}}) }}
                        {{ form_label(form.contract, null, {'label_attr': {'class': 'ml-2 text-sm font-medium text-gray-900 dark:text-white'}}) }}
                    </div>
                    {{ form_errors(form.contract) }}
                </div>
            </div>

            {{ form_rest(form) }}

            <div class="flex items-center justify-between border-t border-gray-200 pt-6 dark:border-gray-800">
                <a href="{{ path('app_author_index') }}" 
                   class="rounded-lg border border-gray-300 px-5 py-2.5 text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:border-gray-600 dark:text-gray-300 dark:hover:bg-gray-700 dark:focus:ring-gray-700">
                    <svg class="mr-2 inline-block h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                    </svg>
                    Zurück zur Liste
                </a>

                <button type="submit" 
                        class="rounded-lg bg-purple-600 px-5 py-2.5 text-sm font-medium text-white hover:bg-purple-700 focus:outline-none focus:ring-4 focus:ring-purple-300 dark:bg-purple-500 dark:hover:bg-purple-600 dark:focus:ring-purple-800">
                    <svg class="mr-2 inline-block h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                    Speichern
                </button>
            </div>

        {{ form_end(form) }}
    </div>
</div>

<!-- Help Card -->
<div class="mt-6 rounded-lg border border-purple-200 bg-purple-50 p-4 dark:border-purple-900/50 dark:bg-purple-900/10">
    <div class="flex gap-3">
        <svg class="h-5 w-5 flex-shrink-0 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <div class="text-sm text-purple-800 dark:text-purple-300">
            <p class="font-semibold">Ausfüllhilfe:</p>
            <ul class="mt-2 list-inside list-disc space-y-1">
                <li>Autor-ID-Format: XXX-XX-XXXX (z. B.: 123-45-6789)</li>
                <li>Telefonformat: XXX XXX-XXXX oder "UNKNOWN"</li>
                <li>Bundesstaat-Code: 2 Großbuchstaben (CA, NY, TX etc.)</li>
                <li>Postleitzahl: 5 Ziffern</li>
                <li>Der Vertragsstatus zeigt an, ob der Autor einen Vertrag hat</li>
            </ul>
        </div>
    </div>
</div>
{% endblock %}
