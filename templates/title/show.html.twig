    <table class="table">
        <tbody>
            <tr>
                <th>TitleId</th>
                <td>{{ title.titleId }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ title.title }}</td>
            </tr>
            <tr>
                <th>Type</th>
