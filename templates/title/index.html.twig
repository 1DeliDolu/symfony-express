{% extends 'base.html.twig' %}

{% block title %}Title index{% endblock %}

{% block body %}
    <h1>Title index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>TitleId</th>
                <th>Title</th>
                <th>Type</th>
                <th>Price</th>
                <th>Advance</th>
                <th>Royalty</th>
                <th>YtdSales</th>
                <th>Notes</th>
                <th>Pubdate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for title in titles %}
            <tr>
                <td>{{ title.titleId }}</td>
                <td>{{ title.title }}</td>
                <td>{{ title.type }}</td>
                <td>{{ title.price }}</td>
                <td>{{ title.advance }}</td>
                <td>{{ title.royalty }}</td>
                <td>{{ title.ytdSales }}</td>
                <td>{{ title.notes }}</td>
                <td>{{ title.pubdate ? title.pubdate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_title_show', {'titleId': title.titleId}) }}">show</a>
                    <a href="{{ path('app_title_edit', {'titleId': title.titleId}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_title_new') }}">Create new</a>
{% endblock %}
