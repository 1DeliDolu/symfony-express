{% extends 'base.html.twig' %}

{% block title %}Sale{% endblock %}

{% block body %}
    <h1>Sale</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>OrdNum</th>
                <td>{{ sale.ordNum }}</td>
            </tr>
            <tr>
                <th>OrdDate</th>
                <td>{{ sale.ordDate ? sale.ordDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Qty</th>
                <td>{{ sale.qty }}</td>
            </tr>
            <tr>
                <th>Payterms</th>
                <td>{{ sale.payterms }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_sale_index') }}">back to list</a>

    <a href="{{ path('app_sale_edit', {'store': sale.store}) }}">edit</a>

    {{ include('sale/_delete_form.html.twig') }}
