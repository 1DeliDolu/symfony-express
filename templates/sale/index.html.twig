{% extends 'admin_base.html.twig' %}

{% block title %}Satışlar{% endblock %}
{% block page_title %}Satış Yönetimi{% endblock %}

{% block body %}
<style>
[x-cloak] { display: none !important; }
</style>

{% set salesJson = sales|json_encode(constant('JSON_UNESCAPED_UNICODE'))|raw %}

<div x-data="{
  q: '',
  sort: {key: 'ordDate.timestamp', dir: 'desc'},
  rows: {{ salesJson }},
  get filtered() {
    let r = this.rows.filter(x => {
      let searchStr = [x.storId, x.storName, x.ordNum, x.titleName, x.payterms].join(' ').toLowerCase();
      return searchStr.includes(this.q.toLowerCase());
    });
    r.sort((a,b) => {
      const k = this.sort.key, d = this.sort.dir === 'asc' ? 1 : -1;
      let aVal = k.includes('.') ? k.split('.').reduce((o,i) => o?.[i], a) : a[k];
      let bVal = k.includes('.') ? k.split('.').reduce((o,i) => o?.[i], b) : b[k];
      return (aVal > bVal ? 1 : aVal < bVal ? -1 : 0) * d;
    });
    return r;
  },
  setSort(k) { 
    this.sort.dir = (this.sort.key === k && this.sort.dir === 'asc') ? 'desc' : 'asc'; 
    this.sort.key = k; 
  }
}">

  <!-- Header with Search -->
  <div class="mb-4 flex items-center justify-between gap-3">
    <input x-model="q" type="text" placeholder="Satış ara..."
           class="w-full rounded-lg border border-gray-300 px-4 py-2.5 text-sm focus:border-blue-500 focus:ring-blue-500 dark:border-gray-600 dark:bg-gray-800 dark:text-white"/>
    <div class="flex items-center gap-3">
      <span class="text-sm text-gray-600 dark:text-gray-400 whitespace-nowrap" x-text="filtered.length + ' Satış'"></span>
      <a href="{{ path('app_sale_new') }}" 
         class="inline-flex items-center gap-2 rounded-lg bg-blue-600 px-4 py-2.5 text-sm font-semibold text-white hover:bg-blue-700 dark:bg-blue-500 dark:hover:bg-blue-600 whitespace-nowrap">
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Yeni Satış
      </a>
    </div>
  </div>

  <!-- Table -->
  <div class="overflow-x-auto rounded-xl border border-gray-200 bg-white shadow-sm dark:border-gray-800 dark:bg-gray-900">
    <table class="min-w-full text-sm">
      <thead class="bg-gray-50 text-gray-600 dark:bg-gray-800 dark:text-gray-400">
        <tr>
          <th class="px-4 py-3 text-left">
            <button @click="setSort('storName')" class="font-semibold hover:underline">
              Mağaza <span x-show="sort.key==='storName'">(<span x-text="sort.dir"></span>)</span>
            </button>
          </th>
          <th class="px-4 py-3 text-left">
            <button @click="setSort('ordNum')" class="font-semibold hover:underline">
              Sipariş No <span x-show="sort.key==='ordNum'">(<span x-text="sort.dir"></span>)</span>
            </button>
          </th>
          <th class="px-4 py-3 text-left">
            <button @click="setSort('titleName')" class="font-semibold hover:underline">
              Kitap <span x-show="sort.key==='titleName'">(<span x-text="sort.dir"></span>)</span>
            </button>
          </th>
          <th class="px-4 py-3 text-left">
            <button @click="setSort('ordDate.timestamp')" class="font-semibold hover:underline">
              Sipariş Tarihi <span x-show="sort.key==='ordDate.timestamp'">(<span x-text="sort.dir"></span>)</span>
            </button>
          </th>
          <th class="px-4 py-3 text-left">
            <button @click="setSort('qty')" class="font-semibold hover:underline">
              Miktar <span x-show="sort.key==='qty'">(<span x-text="sort.dir"></span>)</span>
            </button>
          </th>
          <th class="px-4 py-3 text-left">
            <button @click="setSort('payterms')" class="font-semibold hover:underline">
              Ödeme Koşulları <span x-show="sort.key==='payterms'">(<span x-text="sort.dir"></span>)</span>
            </button>
          </th>
          <th class="px-4 py-3 text-right">Aksiyonlar</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-100 dark:divide-gray-800">
        <template x-for="sale in filtered" :key="sale.storId + sale.ordNum + sale.titleId">
          <tr class="odd:bg-white even:bg-gray-50 hover:bg-blue-50/50 dark:odd:bg-gray-900 dark:even:bg-gray-800 dark:hover:bg-blue-900/20">
            <td class="px-4 py-3">
              <div class="flex items-center gap-2">
                <div class="flex h-8 w-8 items-center justify-center rounded-full bg-purple-100 text-sm font-semibold text-purple-700 dark:bg-purple-900/30 dark:text-purple-400">
                  <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                  </svg>
                </div>
                <div>
                  <div class="font-medium text-gray-900 dark:text-white" x-text="sale.storName"></div>
                  <div class="text-xs text-gray-500 dark:text-gray-400" x-text="sale.storId"></div>
                </div>
              </div>
            </td>
            <td class="px-4 py-3">
              <span class="font-mono text-xs font-medium text-gray-900 dark:text-white" x-text="sale.ordNum"></span>
            </td>
            <td class="px-4 py-3">
              <div>
                <div class="font-medium text-gray-900 dark:text-white" x-text="sale.titleName"></div>
                <div class="text-xs text-gray-500 dark:text-gray-400" x-text="sale.titleId"></div>
              </div>
            </td>
            <td class="px-4 py-3 text-gray-700 dark:text-gray-300" 
                x-text="sale.ordDate ? new Date(sale.ordDate.date).toLocaleDateString('tr-TR') : 'N/A'"></td>
            <td class="px-4 py-3">
              <span class="inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800 dark:bg-green-900/20 dark:text-green-400" 
                    x-text="sale.qty + ' adet'"></span>
            </td>
            <td class="px-4 py-3">
              <span class="inline-flex items-center rounded-full bg-blue-100 px-2.5 py-0.5 text-xs font-medium text-blue-800 dark:bg-blue-900/20 dark:text-blue-400" 
                    x-text="sale.payterms"></span>
            </td>
            <td class="px-4 py-3 text-right">
              <div class="inline-flex items-center gap-1">
                <a :href="`{{ path('app_sale_show', {'store': '__STORE__', 'ordNum': '__ORDNUM__', 'title': '__TITLE__'}) }}`.replace('__STORE__', sale.storId).replace('__ORDNUM__', sale.ordNum).replace('__TITLE__', sale.titleId)" 
                   class="rounded-lg bg-blue-600 px-3 py-1.5 text-white hover:bg-blue-700 dark:bg-blue-500 dark:hover:bg-blue-600">
                  Görüntüle
                </a>
                <a :href="`{{ path('app_sale_edit', {'store': '__STORE__', 'ordNum': '__ORDNUM__', 'title': '__TITLE__'}) }}`.replace('__STORE__', sale.storId).replace('__ORDNUM__', sale.ordNum).replace('__TITLE__', sale.titleId)" 
                   class="rounded-lg bg-green-600 px-3 py-1.5 text-white hover:bg-green-700 dark:bg-green-500 dark:hover:bg-green-600">
                  Düzenle
                </a>
              </div>
            </td>
          </tr>
        </template>
        <tr x-show="filtered.length === 0">
          <td colspan="7" class="px-6 py-12 text-center">
            <p class="text-gray-600 dark:text-gray-400">Satış bulunamadı</p>
            <button @click="q=''" class="mt-2 text-sm font-medium text-blue-600 hover:underline dark:text-blue-400">
              Aramayı temizle
            </button>
          </td>
        </tr>
      </tbody>
    </table>
  </div>

</div>
{% endblock %}
